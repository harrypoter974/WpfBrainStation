<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.JudaismView.Congratulations"
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items" 
    x:Class="BS.JudaismView.Congratulations.UCFoodCongratulation"
             mc:Ignorable="d" 
                  d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <!--<ImageBrush ImageSource="C:\Brain_Station\WpfBrainStationBrachoot\WpfBrainStation\Resources\JudaismImage\Brahot\FoodC\f2.jpg"/>-->
        <ImageBrush ImageSource="{Binding BackgroundPic}"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="232*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Label >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="MenuCongratulationsJoyVM"/>
            </Label.InputBindings>
        </Label>



        <Items:UCSpeaker  Grid.ColumnSpan="3" Grid.RowSpan="3" HorizontalAlignment="Left" 
 Margin="{Binding SpeakerMargin}" VerticalAlignment="Top" x:Name="uCSpeaker1"  />
        <Label Grid.Column="1"  Grid.Row="9"  Grid.ColumnSpan="2"       >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ChangeBrahot}" CommandParameter="5"/>
            </Label.InputBindings>
        </Label>
        <Label Grid.Column="4"  Grid.Row="9"  Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ChangeBrahot}" CommandParameter="4"/>
            </Label.InputBindings>
        </Label>
        <Label Grid.Column="7"  Grid.Row="9"                      >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ChangeBrahot}" CommandParameter="3"/>
            </Label.InputBindings>
        </Label>
        <Label Grid.Column="9"  Grid.Row="9"                      >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ChangeBrahot}" CommandParameter="0"/>
            </Label.InputBindings>
        </Label>
        <Label Grid.Column="11" Grid.Row="9"                      >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ChangeBrahot}" CommandParameter="1"/>
            </Label.InputBindings>
        </Label>
        <Label Grid.Column="13" Grid.Row="9"  Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ChangeBrahot}" CommandParameter="2"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
