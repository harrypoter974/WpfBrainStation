<UserControl xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
             x:Class="BS.NotionsView.Gardens.UCkitchenware"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Gardens"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"  
             mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCkitchenware.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="108*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="109*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="94*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="147*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LHome" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuKitchenwareVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Items:NUCSpeaker Grid.ColumnSpan="5" Grid.RowSpan="4" 
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>
        <Label   Visibility="{Binding Item0 }"  Background="#FF41AD48"  Grid.Column="2"   Grid.Row="8" />
        <Label   Visibility="{Binding Item1 }"  Background="#FF41AD48"  Grid.Column="4"   Grid.Row="8" />
        <Label   Visibility="{Binding Item2 }"  Background="#FF41AD48"  Grid.Column="6"   Grid.Row="8" />
        <Label   Visibility="{Binding Item3 }"  Background="#FF41AD48"  Grid.Column="8"   Grid.Row="8" />
        <Label   Visibility="{Binding Item4 }"  Background="#FF41AD48"  Grid.Column="11"  Grid.Row="8"  Grid.ColumnSpan="2"/>
        <Label   Visibility="{Binding Item5 }"  Background="#FF41AD48"  Grid.Column="2"  Grid.Row="12" />
        <Label   Visibility="{Binding Item6 }"  Background="#FF41AD48"  Grid.Column="4"  Grid.Row="12" />
        <Label   Visibility="{Binding Item7 }"  Background="#FF41AD48"  Grid.Column="6"  Grid.Row="12" />
        <Label   Visibility="{Binding Item8 }"  Background="#FF41AD48"  Grid.Column="8"  Grid.Row="12" />
        <Label   Visibility="{Binding Item9 }"  Background="#FF41AD48"  Grid.Column="11" Grid.Row="12"  Grid.ColumnSpan="2"/>
        <Label   Visibility="{Binding Item10}"  Background="#FF41AD48"  Grid.Column="2"  Grid.Row="16"   Grid.RowSpan="2"/>
        <Label   Visibility="{Binding Item11}"  Background="#FF41AD48"  Grid.Column="4"  Grid.Row="16"   Grid.RowSpan="2"/>
        <Label   Visibility="{Binding Item12}"  Background="#FF41AD48"  Grid.Column="6"  Grid.Row="16"   Grid.RowSpan="2"/>
        <Label   Visibility="{Binding Item13}"  Background="#FF41AD48"  Grid.Column="8"  Grid.Row="16"   Grid.RowSpan="2"/>
        <Label   Visibility="{Binding Item14}"  Background="#FF41AD48"  Grid.Column="11" Grid.Row="16"  Grid.ColumnSpan="2"  Grid.RowSpan="2" />

        <Label  Grid.Column="2"  Grid.Row="5" Grid.RowSpan="4"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="4"  Grid.Row="5" Grid.RowSpan="4"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="6"  Grid.Row="5" Grid.RowSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="8"  Grid.Row="5" Grid.RowSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="11" Grid.Row="5" Grid.RowSpan="4"   Grid.ColumnSpan="2"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="2"  Grid.Row="9" Grid.RowSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="4"  Grid.Row="9" Grid.RowSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="6"  Grid.Row="9" Grid.RowSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="7" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="8"  Grid.Row="9" Grid.RowSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="8" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="10"  Grid.Row="9" Grid.RowSpan="4" Grid.ColumnSpan="4"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="9" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="2" Grid.Row="13" Grid.RowSpan="6"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="10" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="4" Grid.Row="13" Grid.RowSpan="6"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="11" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="6" Grid.Row="13" Grid.RowSpan="6"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="12" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="8" Grid.Row="13" Grid.RowSpan="6" Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="13" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="10" Grid.Row="13" Grid.RowSpan="6" Grid.ColumnSpan="5"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="14" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="5" Grid.RowSpan="4"
                   Grid.ColumnSpan="13" Visibility="{Binding LineItem0 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="9" Grid.RowSpan="4"
                   Grid.ColumnSpan="13" Visibility="{Binding LineItem1 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="13"  Grid.RowSpan="6"
                   Grid.ColumnSpan="14" Visibility="{Binding LineItem2 }" />

        <Image Source="{Binding ShowBut0}" Grid.Column="17" Grid.Row="6"   />
        <Image Source="{Binding ShowBut1}" Grid.Column="17" Grid.Row="10"  />
        <Image Source="{Binding ShowBut2}" Grid.Column="17" Grid.Row="14"  />
        <Label Grid.Column="17" Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="17" Grid.Row="9"   Grid.ColumnSpan="2" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="17" Grid.Row="13"   Grid.ColumnSpan="2" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Image Source="{Binding LanguageBut2}" Grid.Column="12"  Grid.Row="1"/>
        <Image Source="{Binding LanguageBut1}" Grid.Column="13" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut0}" Grid.Column="15" Grid.Row="1"  Grid.ColumnSpan="3" />
        <Label  Grid.Column="12"  Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="13" Grid.RowSpan="3" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="15" Grid.RowSpan="3" Grid.ColumnSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Image x:Name="image" Grid.ColumnSpan="6" Grid.Column="8"  Visibility="{Binding messagePic}" 
               Grid.Row="4"  Source="/BS.NotionsView;component/NotionsImage/messageKitchenware.png"  Stretch="Fill" />
    </Grid>
</UserControl>
