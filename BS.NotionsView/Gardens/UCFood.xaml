<UserControl xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
             x:Class="BS.NotionsView.Gardens.UCFood"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Gardens"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"  
             mc:Ignorable="d" 
            d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCFood.jpg"/>
    </UserControl.Background>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="164*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="106*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="106*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LHome" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuFoodVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Image Source="{Binding ShowBut0}" Grid.Column="15" Grid.Row="7"   />
        <Image Source="{Binding ShowBut1}" Grid.Column="15" Grid.Row="11"  />
        <Image Source="{Binding ShowBut2}" Grid.Column="15" Grid.Row="15"  />
        <Label Grid.Column="15" Grid.Row="6" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="15" Grid.Row="10"  Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="15" Grid.Row="14"   Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Label   Visibility="{Binding Item0 }"  Background="#FF41AD48"  Grid.Column="1"   Grid.Row="9" />
        <Label   Visibility="{Binding Item1 }"  Background="#FF41AD48"  Grid.Column="3"   Grid.Row="9" />
        <Label   Visibility="{Binding Item2 }"  Background="#FF41AD48"  Grid.Column="5"   Grid.Row="9" />
        <Label   Visibility="{Binding Item3 }"  Background="#FF41AD48"  Grid.Column="8"   Grid.Row="9" />
        <Label   Visibility="{Binding Item4 }"  Background="#FF41AD48"  Grid.Column="9"  Grid.Row="9"  Grid.ColumnSpan="4"/>
        <Label   Visibility="{Binding Item5 }"  Background="#FF41AD48"  Grid.Column="1"  Grid.Row="13" />
        <Label   Visibility="{Binding Item6 }"  Background="#FF41AD48"  Grid.Column="3"  Grid.Row="13" />
        <Label   Visibility="{Binding Item7 }"  Background="#FF41AD48"  Grid.Column="5"  Grid.Row="13" />
        <Label   Visibility="{Binding Item8 }"  Background="#FF41AD48"  Grid.Column="8"  Grid.Row="13" />
        <Label   Visibility="{Binding Item9 }"  Background="#FF41AD48"  Grid.Column="9" Grid.Row="13"  Grid.ColumnSpan="3"/>
        <Label   Visibility="{Binding Item10}"  Background="#FF41AD48"  Grid.Column="1"  Grid.Row="17"  />
        <Label   Visibility="{Binding Item11}"  Background="#FF41AD48"  Grid.Column="3"  Grid.Row="17"  />
        <Label   Visibility="{Binding Item12}"  Background="#FF41AD48"  Grid.Column="5"  Grid.Row="17"  />
        <Label   Visibility="{Binding Item13}"  Background="#FF41AD48"  Grid.Column="8"  Grid.Row="17"  />
        <Label   Visibility="{Binding Item14}"  Background="#FF41AD48"  Grid.Column="10" Grid.Row="17"  Grid.ColumnSpan="2"  />

        <Label  Grid.Column="1"  Grid.Row="5" Grid.RowSpan="5"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"  Grid.Row="5" Grid.RowSpan="5" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="5"  Grid.Row="5" Grid.RowSpan="5" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="8"  Grid.Row="5" Grid.RowSpan="5" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9" Grid.Row="5" Grid.RowSpan="5"   Grid.ColumnSpan="4"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="1"  Grid.Row="10" Grid.RowSpan="4"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"  Grid.Row="10" Grid.RowSpan="4"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="5"  Grid.Row="10" Grid.RowSpan="4"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="7" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="8"  Grid.Row="10" Grid.RowSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="8" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9"  Grid.Row="10" Grid.RowSpan="4" Grid.ColumnSpan="5"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="9" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="1" Grid.Row="14" Grid.RowSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="10" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3" Grid.Row="14" Grid.RowSpan="4"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="11" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="5" Grid.Row="14" Grid.RowSpan="4"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="12" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="6" Grid.Row="14" Grid.RowSpan="4" Grid.ColumnSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="13" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9" Grid.Row="14" Grid.RowSpan="4" Grid.ColumnSpan="5"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="14" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Image x:Name="image" Grid.ColumnSpan="5" Grid.Column="8" Visibility="{Binding messagePic}" 
               Grid.Row="4"  Source="/BS.NotionsView;component/NotionsImage/messageFood.png"  Stretch="Fill" />

        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="5" Grid.RowSpan="5"
            Grid.ColumnSpan="12" Visibility="{Binding LineItem0 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="10" Grid.RowSpan="4"
                   Grid.ColumnSpan="13" Visibility="{Binding LineItem1 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="14"  Grid.RowSpan="4"
                   Grid.ColumnSpan="14" Visibility="{Binding LineItem2 }" />
        <Items:NUCSpeaker Grid.ColumnSpan="4" Grid.RowSpan="4" 
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}"  VerticalAlignment="Top"/>
        <Image Source="{Binding LanguageBut2}" Grid.Column="11"  Grid.Row="1"/>
        <Image Source="{Binding LanguageBut1}" Grid.Column="12" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut0}" Grid.Column="14" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Label  Grid.Column="11"  Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="12" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="14" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
    </Grid>
</UserControl>
