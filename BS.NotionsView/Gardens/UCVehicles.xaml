<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Gardens"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items" 
    x:Class="BS.NotionsView.Gardens.UCVehicles"
             mc:Ignorable="d" 
                d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCVehicles.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="164*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="153*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LHome" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuVehiclesVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Items:NUCSpeaker Grid.ColumnSpan="4" Grid.RowSpan="4" 
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>

        <Label Grid.Column="2"  Grid.Row="8"  Grid.RowSpan="3"    >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="4"  Grid.Row="8"  Grid.ColumnSpan="2" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="7"  Grid.Row="8"  Grid.ColumnSpan="4" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="11" Grid.Row="8"  Grid.ColumnSpan="5" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="2"  Grid.Row="14" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="4"  Grid.Row="14" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="8"  Grid.Row="14" Grid.ColumnSpan="3" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="11" Grid.Row="14" Grid.ColumnSpan="5" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="7" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="1"  Grid.Row="19" Grid.ColumnSpan="2" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="8" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="4"  Grid.Row="19" Grid.ColumnSpan="2" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="9" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="8"  Grid.Row="19" Grid.ColumnSpan="3" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="10" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="11" Grid.Row="19" Grid.ColumnSpan="6" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="11" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="2"   Grid.Row="12" Visibility="{Binding Item0}"  Background="#FF41AD48"/>
        <Label Grid.Column="4"   Grid.Row="12" Visibility="{Binding Item1}"  Background="#FF41AD48"/>
        <Label Grid.Column="8"   Grid.Row="12" Visibility="{Binding Item2}"  Background="#FF41AD48" Grid.ColumnSpan="3"/>
        <Label Grid.Column="11"  Grid.Row="12" Visibility="{Binding Item3}"  Background="#FF41AD48" Grid.ColumnSpan="4"/>
        <Label Grid.Column="2"   Grid.Row="17" Visibility="{Binding Item4}"  Background="#FF41AD48"/>
        <Label Grid.Column="4"   Grid.Row="17" Visibility="{Binding Item5}"  Background="#FF41AD48"/>
        <Label Grid.Column="8"   Grid.Row="17" Visibility="{Binding Item6}"  Background="#FF41AD48" Grid.ColumnSpan="3"/>
        <Label Grid.Column="11"  Grid.Row="17" Visibility="{Binding Item7}"  Background="#FF41AD48" Grid.ColumnSpan="4"/>
        <Label Grid.Column="2"   Grid.Row="22" Visibility="{Binding Item8}"  Background="#FF41AD48"/>
        <Label Grid.Column="4"   Grid.Row="22" Visibility="{Binding Item9}"  Background="#FF41AD48"/>
        <Label Grid.Column="8"   Grid.Row="22" Visibility="{Binding Item10}"  Background="#FF41AD48" Grid.ColumnSpan="3"/>
        <Label Grid.Column="11"  Grid.Row="22" Visibility="{Binding Item11}"  Background="#FF41AD48" Grid.ColumnSpan="4"/>
        <Image x:Name="image" Grid.ColumnSpan="6" Grid.Column="9" Visibility="{Binding messagePic}"
               Grid.Row="5" Grid.RowSpan="2" Source="/BS.NotionsView;component/NotionsImage/messageVehicles.png"
               Stretch="Fill" />

        <Image Source="{Binding ShowBut0}" Grid.Column="17" Grid.Row="9"   />
        <Image Source="{Binding ShowBut1}" Grid.Column="17" Grid.Row="15"  />
        <Image Source="{Binding ShowBut2}" Grid.Column="17" Grid.Row="20"  />
        <Label Grid.Column="17"  Grid.Row="8" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="17"  Grid.Row="14" Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="17"  Grid.Row="19"  Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="8" Grid.RowSpan="5"
                   Grid.ColumnSpan="16" Visibility="{Binding LineItem0 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="13" Grid.RowSpan="5"
                   Grid.ColumnSpan="16" Visibility="{Binding LineItem1 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="19" Grid.RowSpan="4"
                   Grid.ColumnSpan="16" Visibility="{Binding LineItem2 }" />

        <Image Source="{Binding LanguageBut2}" Grid.Column="13"  Grid.Row="1" Grid.ColumnSpan="1" />
        <Image Source="{Binding LanguageBut1}" Grid.Column="14" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut0}" Grid.Column="16" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Label  Grid.Column="13"  Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="14" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="16" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
    </Grid>
</UserControl>
