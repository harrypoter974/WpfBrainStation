<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Gardens"
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"  
             x:Class="BS.NotionsView.Gardens.UCFruit"
             mc:Ignorable="d" 
                d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCFruit.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="106*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="111*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush />
        </Grid.Background>
        <Grid.InputBindings>
            <MouseBinding MouseAction="LeftClick"  Command="{Binding CloseSpeaker}"/>
        </Grid.InputBindings>
        <Label x:Name="LHome" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuFruitVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="1"   Grid.Row="7"   Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"   Grid.Row="7"   Grid.RowSpan="3"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="5"   Grid.Row="7"   Grid.ColumnSpan="2" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9"   Grid.Row="7"   Grid.ColumnSpan="2" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="12"  Grid.Row="7"   Grid.RowSpan="3" Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="16"  Grid.Row="7"   Grid.ColumnSpan="3" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="1"   Grid.Row="11"   Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"   Grid.Row="11"   Grid.RowSpan="3"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="7" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="5"   Grid.Row="11"   Grid.ColumnSpan="2" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="8" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9"   Grid.Row="11"   Grid.ColumnSpan="2" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="9" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="12"  Grid.Row="11"   Grid.RowSpan="3" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="10" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="16"  Grid.Row="11"   Grid.ColumnSpan="3" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="11" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"   Grid.Row="15"  Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="12" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="5"   Grid.Row="15"  Grid.ColumnSpan="2" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="13" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="8"   Grid.Row="15"  Grid.ColumnSpan="3" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="14" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="12"  Grid.Row="15" Grid.RowSpan="3" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="15" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Label Grid.Column="1"   Grid.Row="10"  Visibility="{Binding Item0}" Background="#FF41AD48" />
        <Label Grid.Column="3"   Grid.Row="10"  Visibility="{Binding Item1}" Background="#FF41AD48" />
        <Label Grid.Column="5"   Grid.Row="10"  Visibility="{Binding Item2}" Background="#FF41AD48"  Grid.ColumnSpan="2" />
        <Label Grid.Column="9"   Grid.Row="10"  Visibility="{Binding Item3}" Background="#FF41AD48" />
        <Label Grid.Column="12"  Grid.Row="10"  Visibility="{Binding Item4}" Background="#FF41AD48" Grid.ColumnSpan="2" />
        <Label Grid.Column="16"  Grid.Row="10"  Visibility="{Binding Item5}" Background="#FF41AD48" Grid.ColumnSpan="3"/>
        <Label Grid.Column="1"   Grid.Row="14" Visibility="{Binding Item6}" Background="#FF41AD48"  />
        <Label Grid.Column="3"   Grid.Row="14" Visibility="{Binding Item7}" Background="#FF41AD48"  />
        <Label Grid.Column="5"   Grid.Row="14" Visibility="{Binding Item8}" Background="#FF41AD48"   Grid.ColumnSpan="2" />
        <Label Grid.Column="9"   Grid.Row="14" Visibility="{Binding Item9}" Background="#FF41AD48"  />
        <Label Grid.Column="12"  Grid.Row="14" Visibility="{Binding Item10}" Background="#FF41AD48" Grid.ColumnSpan="2"  />
        <Label Grid.Column="16"  Grid.Row="14" Visibility="{Binding Item11}" Background="#FF41AD48"   Grid.ColumnSpan="3" />
        <Label Grid.Column="3"   Grid.Row="18" Visibility="{Binding Item12}" Background="#FF41AD48"  />
        <Label Grid.Column="5"   Grid.Row="18" Visibility="{Binding Item13}" Background="#FF41AD48"   Grid.ColumnSpan="2" />
        <Label Grid.Column="9"   Grid.Row="18" Visibility="{Binding Item14}" Background="#FF41AD48"  />
        <Label Grid.Column="12"  Grid.Row="18" Visibility="{Binding Item15}" Background="#FF41AD48" Grid.ColumnSpan="2"  />
        <Image x:Name="image" Grid.ColumnSpan="8" Grid.Column="10" 
 Visibility="{Binding messagePic}" Grid.Row="4" Grid.RowSpan="2" 
               Source="/BS.NotionsView;component/NotionsImage/messageFruit.png"  Stretch="Fill" />

        <Items:NUCSpeaker Grid.ColumnSpan="4" Grid.RowSpan="4" 
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>
        <Image Source="{Binding ShowBut0}" Grid.Column="20" Grid.Row="8"   />
        <Image Source="{Binding ShowBut1}" Grid.Column="20" Grid.Row="12"  />
        <Image Source="{Binding ShowBut2}" Grid.Column="20" Grid.Row="16"  />
        <Label Grid.Column="20" Grid.Row="7"  Grid.ColumnSpan="2" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="20" Grid.Row="11"   Grid.ColumnSpan="2" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="20" Grid.Row="15"  Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="7" Grid.RowSpan="4"
                   Grid.ColumnSpan="18" Visibility="{Binding LineItem0 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="11" Grid.RowSpan="4"
                   Grid.ColumnSpan="18" Visibility="{Binding LineItem1 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="15"  Grid.RowSpan="4"
                   Grid.ColumnSpan="18" Visibility="{Binding LineItem2 }" />
        <Label Grid.Column="7" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuVcabularyVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="6" Grid.Row="3"  Grid.RowSpan="2"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuVcabularyVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Image Source="{Binding LanguageBut2}" Grid.Column="16"  Grid.Row="1"/>
        <Image Source="{Binding LanguageBut1}" Grid.Column="17" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut0}" Grid.Column="19" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Label  Grid.Column="16"  Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="17" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="19" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
    </Grid>
</UserControl>
