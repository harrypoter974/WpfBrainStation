<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Gardens"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"  
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
    x:Class="BS.NotionsView.Gardens.UCFamily"
             mc:Ignorable="d" 
           d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCFamily.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="118*"/>
            <RowDefinition Height="94*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="107*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LHome" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuFamilyVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Items:NUCSpeaker Grid.ColumnSpan="4" Grid.RowSpan="4" 
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}"  VerticalAlignment="Top"/>
        <Label Grid.Column="3" Grid.Row="16"   Grid.RowSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="4" Grid.Row="12"   Grid.RowSpan="3" Grid.ColumnSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="7" Grid.Row="11"   Grid.RowSpan="9" Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="2" Grid.Row="9"  Grid.RowSpan="3" Grid.ColumnSpan="4"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="9" Grid.Row="12"   Grid.RowSpan="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="4" Grid.Row="5"   Grid.RowSpan="3" Grid.ColumnSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="11" Grid.Row="11"   Grid.RowSpan="9" Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="16" Grid.Row="7"   Grid.RowSpan="3"  Grid.ColumnSpan="5"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="13" Grid.Row="11"  Grid.RowSpan="9" Grid.ColumnSpan="5" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="20" Grid.Row="12"  Grid.ColumnSpan="10" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="18" Grid.Row="14"   Grid.RowSpan="6" Grid.ColumnSpan="4"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="23" Grid.Row="17"   Grid.RowSpan="2" Grid.ColumnSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Image x:Name="image"  Grid.Column="16" Grid.RowSpan="2"  Grid.Row="4"
               Visibility="{Binding messagePic}" Grid.ColumnSpan="12" 
               Source="/BS.NotionsView;component/NotionsImage/messageFamily.png" />
        <Image Source="{Binding LanguageBut2}"  Grid.Column="24"  Grid.Row="1" Grid.ColumnSpan="3"/>
        <Image Source="{Binding LanguageBut1}" Grid.Column="27" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut0}" Grid.Column="29" Grid.Row="1"  Grid.ColumnSpan="2"    />
        <Label  Grid.Column="24"  Grid.RowSpan="3" Grid.ColumnSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="27" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="29" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
    </Grid>
</UserControl>
