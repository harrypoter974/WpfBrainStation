<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Gardens"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"     
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items" 
             x:Class="BS.NotionsView.Gardens.UCDaysOfTheWeek"
             mc:Ignorable="d" 
                d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCDaysOfTheWeek.jpg"/>
    </UserControl.Background>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="93*"/>
            <RowDefinition Height="167*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="104*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="LHome" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuTimeVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="3" Grid.Row="7" Grid.ColumnSpan="3"     Visibility="{Binding Item2 }"  Background="#FFF5F5F3"  />
        <Label Grid.Column="7" Grid.Row="7" Grid.ColumnSpan="3"     Visibility="{Binding Item1 }"  Background="#FFF5F5F3"/>
        <Label Grid.Column="11" Grid.Row="7" Grid.ColumnSpan="5"    Visibility="{Binding Item0 }"  Background="#FFF5F5F3" />
        <Label Grid.Column="2"  Grid.Row="11" Grid.ColumnSpan="2"   Visibility="{Binding Item6 }"  Background="#FFF5F5F3"  />
        <Label Grid.Column="5"  Grid.Row="11" Grid.ColumnSpan="3"   Visibility="{Binding Item5 }"  Background="#FFF5F5F3"/>
        <Label Grid.ColumnSpan="3" Grid.Column="9" Grid.Row="11"    Visibility="{Binding Item4 }"  Background="#FFF5F5F3"  />
        <Label Grid.Column="14"  Grid.Row="11" Grid.ColumnSpan="5"  Visibility="{Binding Item3 }"  Background="#FFF5F5F3"/>

        <Label Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="3" Grid.RowSpan="2"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.ColumnSpan="3" Grid.Column="7" Grid.Row="6"   Grid.RowSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="11" Grid.Row="6" Grid.ColumnSpan="5"  Grid.RowSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="2"  Grid.Row="9" Grid.ColumnSpan="2"  Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="5"  Grid.Row="9" Grid.ColumnSpan="3"  Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="9"  Grid.Row="9" Grid.ColumnSpan="3"  Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="14"  Grid.Row="9" Grid.ColumnSpan="5" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Image x:Name="image" Grid.ColumnSpan="8" Grid.Column="13"  Grid.Row="4"
         Source="/BS.NotionsView;component/NotionsImage/messageDay.png" Visibility="{Binding messagePic}" Stretch="Fill"/>
        <Items:NUCSpeaker Grid.ColumnSpan="4" Grid.RowSpan="4" 
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>




        <Image Source="{Binding LanguageBut2}"  Grid.Column="18"  Grid.Row="1" Grid.ColumnSpan="2"/>
        <Image Source="{Binding LanguageBut1}" Grid.Column="20" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut0}" Grid.Column="22" Grid.Row="1"                      />
        <Label  Grid.Column="18"  Grid.RowSpan="3"  Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="20" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="22" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
    </Grid>
</UserControl>
