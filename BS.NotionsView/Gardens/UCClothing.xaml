<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Gardens"
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             x:Class="BS.NotionsView.Gardens.UCClothing"
             mc:Ignorable="d"   d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCClothing.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="170*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="121*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="182*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LHome"  Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuClothingVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
      <Items:NUCSpeaker Grid.ColumnSpan="5" Grid.RowSpan="4" 
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/> 
        <Image x:Name="image" Grid.ColumnSpan="8" Grid.Column="8" Visibility="{Binding messagePic}"
               Stretch="Fill" Grid.Row="4" Grid.RowSpan="2" 
               Source="/BS.NotionsView;component/NotionsImage/messageClothing.png" />
        <Label  Grid.Column="1"  Grid.Row="7" Grid.RowSpan="4" Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"  Grid.Row="7" Grid.RowSpan="4"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="4"  Grid.Row="7" Grid.RowSpan="4" Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="6"  Grid.Row="7" Grid.RowSpan="4" Grid.ColumnSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="10" Grid.Row="7" Grid.RowSpan="4" Grid.ColumnSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="13" Grid.Row="7" Grid.RowSpan="4" Grid.ColumnSpan="4"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="2"  Grid.Row="11" Grid.RowSpan="4"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"  Grid.Row="11" Grid.RowSpan="4"    >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="7" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="4"  Grid.Row="11" Grid.RowSpan="4" Grid.ColumnSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="8" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="7"  Grid.Row="11" Grid.RowSpan="4" Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="9" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="10" Grid.Row="11" Grid.RowSpan="4" Grid.ColumnSpan="3"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="10" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="13" Grid.Row="11" Grid.RowSpan="4" Grid.ColumnSpan="5"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="11" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Label  Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="10"   Visibility="{Binding Item0 }"  Background="#FF41AD48" />
        <Label  Grid.Column="3" Grid.Row="10"                       Visibility="{Binding Item1 }"  Background="#FF41AD48"/>
        <Label  Grid.Column="4" Grid.Row="10" Grid.ColumnSpan="2"   Visibility="{Binding Item2 }"  Background="#FF41AD48"/>
        <Label  Grid.Column="7" Grid.Row="10" Grid.ColumnSpan="2"   Visibility="{Binding Item3 }"  Background="#FF41AD48"/>
        <Label  Grid.Column="10" Grid.Row="10"                      Visibility="{Binding Item4 }"  Background="#FF41AD48" Grid.ColumnSpan="3"/>
        <Label  Grid.Column="13" Grid.Row="10"  Grid.ColumnSpan="4" Visibility="{Binding Item5 }"  Background="#FF41AD48"/>
        <Label  Grid.Column="1"  Grid.Row="14"  Grid.ColumnSpan="2" Visibility="{Binding Item6 }"  Background="#FF41AD48"/>
        <Label  Grid.Column="3"  Grid.Row="14"                      Visibility="{Binding Item7 }"  Background="#FF41AD48"/>
        <Label  Grid.Column="4"  Grid.Row="14"  Grid.ColumnSpan="2" Visibility="{Binding Item8 }"  Background="#FF41AD48"/>
        <Label  Grid.Column="7"  Grid.Row="14"  Grid.ColumnSpan="2" Visibility="{Binding Item9 }"  Background="#FF41AD48"/>
        <Label  Grid.Column="10" Grid.Row="14"                      Visibility="{Binding Item10}"  Background="#FF41AD48" Grid.ColumnSpan="3"/>
        <Label  Grid.Column="13" Grid.Row="14"  Grid.ColumnSpan="4" Visibility="{Binding Item11}"  Background="#FF41AD48"/>

        <Image Source="{Binding ShowBut0}" Grid.Column="18" Grid.Row="8"   />
        <Image Source="{Binding ShowBut1}" Grid.Column="18" Grid.Row="12"  />
        <Label Grid.Column="18" Grid.Row="7" Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="18" Grid.Row="11" Grid.ColumnSpan="2" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Rectangle Grid.Column="2" Fill="#FF41AD48" Grid.Row="7" Grid.RowSpan="4"
                   Grid.ColumnSpan="16" Visibility="{Binding LineItem0 }" />
        <Rectangle Grid.Column="2" Fill="#FF41AD48" Grid.Row="11" Grid.RowSpan="4"
                   Grid.ColumnSpan="16" Visibility="{Binding LineItem1 }" />

        <Label Grid.Column="6" Grid.Row="3"  Grid.RowSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuVocabularyVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Image Source="{Binding LanguageBut2}"  Grid.Column="14"  Grid.Row="1"/>
        <Image Source="{Binding LanguageBut1}" Grid.Column="15" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Image Source="{Binding LanguageBut0}" Grid.Column="17" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Label  Grid.Column="14"  Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="15" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="17" Grid.RowSpan="3" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
    </Grid>
</UserControl>
