<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Gardens"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"    
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
             x:Class="BS.NotionsView.Gardens.UCMusicalLnstruments"
             mc:Ignorable="d" 
              d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCMusicalLnstruments.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="84*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LHome" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuMusicalLnstrumentsVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="1"   Grid.Row="7"   Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="2"   Grid.Row="7"   Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"   Grid.Row="7"  Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="6"   Grid.Row="7"  Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9"  Grid.Row="7"  Grid.RowSpan="3" Grid.ColumnSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="12"  Grid.Row="7"  Grid.RowSpan="3" Grid.ColumnSpan="6" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="1"   Grid.Row="12" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="2"   Grid.Row="12" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="7" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"   Grid.Row="12" Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="8" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="6"   Grid.Row="12" Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="9" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9"  Grid.Row="12" Grid.RowSpan="3" Grid.ColumnSpan="3"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="10" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="12"  Grid.Row="12" Grid.RowSpan="3" Grid.ColumnSpan="6" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="11" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Label Grid.Column="1"  Grid.Row="10"   Visibility="{Binding Item0}" Background="#FF41AD48"/>
        <Label Grid.Column="2"  Grid.Row="10"   Visibility="{Binding Item1}" Background="#FF41AD48" />
        <Label Grid.Column="3"  Grid.Row="10"   Visibility="{Binding Item2}" Background="#FF41AD48"  Grid.ColumnSpan="2" />
        <Label Grid.Column="6"  Grid.Row="10"   Visibility="{Binding Item3}" Background="#FF41AD48"  />
        <Label Grid.Column="9"  Grid.Row="10"   Visibility="{Binding Item4}" Background="#FF41AD48" Grid.ColumnSpan="3"  />
        <Label Grid.Column="12" Grid.Row="10"   Visibility="{Binding Item5}" Background="#FF41AD48"  Grid.ColumnSpan="6" />

        <Label Grid.Column="1"  Grid.Row="15"  Visibility="{Binding Item6}" Background="#FF41AD48" />
        <Label Grid.Column="2"  Grid.Row="15"  Visibility="{Binding Item7}" Background="#FF41AD48" />
        <Label Grid.Column="3"  Grid.Row="15"  Visibility="{Binding Item8}" Background="#FF41AD48"  Grid.ColumnSpan="3" />
        <Label Grid.Column="6"  Grid.Row="15"  Visibility="{Binding Item9}" Background="#FF41AD48"  Grid.ColumnSpan="2" />
        <Label Grid.Column="9"  Grid.Row="15"  Visibility="{Binding Item10}" Background="#FF41AD48" Grid.ColumnSpan="3" />
        <Label Grid.Column="12" Grid.Row="15"  Visibility="{Binding Item11}" Background="#FF41AD48"  Grid.ColumnSpan="6" />
        <Image x:Name="image"  Grid.Column="7"   Grid.Row="4"  Visibility="{Binding messagePic}" Grid.ColumnSpan="9" 
               Source="/BS.NotionsView;component/NotionsImage/messageMusicalLnstruments.png" />



        <Image Source="{Binding ShowBut0}" Grid.Column="18" Grid.Row="8"   />
        <Image Source="{Binding ShowBut1}" Grid.Column="18" Grid.Row="13"  />
        <Label Grid.Column="18" Grid.Row="8" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Label.Background>
                <ImageBrush ImageSource="{Binding ShowBut0}"/>
            </Label.Background>
        </Label>
        <Label Grid.Column="18" Grid.Row="13" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Label.Background>
                <ImageBrush ImageSource="{Binding ShowBut1}"/>
            </Label.Background>
        </Label>

        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="7" Grid.RowSpan="4"
                   Grid.ColumnSpan="17" Visibility="{Binding LineItem0 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="12" Grid.RowSpan="4"
                   Grid.ColumnSpan="17" Visibility="{Binding LineItem1 }" />

        <Image Source="{Binding LanguageBut2}" Grid.Column="13"  Grid.Row="1" Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut1}" Grid.Column="15" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut0}" Grid.Column="17" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Label  Grid.Column="13"  Grid.RowSpan="3" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="15" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="17" Grid.RowSpan="3" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Items:NUCSpeaker Grid.ColumnSpan="3" Grid.RowSpan="4"
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
