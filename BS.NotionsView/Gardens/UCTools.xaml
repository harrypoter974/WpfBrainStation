<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Gardens"
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    x:Class="BS.NotionsView.Gardens.UCTools"
             mc:Ignorable="d" 
                d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCTools.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="106*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="108*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="138*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="135*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="LHome" Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuToolsVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="2"   Grid.Row="8"   Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="4"   Grid.Row="8"   Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="6"   Grid.Row="8"  Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9"   Grid.Row="8"  Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="12"  Grid.Row="8"  Grid.RowSpan="3" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="15"  Grid.Row="8"  Grid.RowSpan="3" Grid.ColumnSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="2"   Grid.Row="13" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="4"   Grid.Row="13" Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="7" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="6"   Grid.Row="13" Grid.ColumnSpan="3" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="8" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9"   Grid.Row="13" Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="9" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="12"  Grid.Row="13" Grid.RowSpan="3" Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="10" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="15"  Grid.Row="13" Grid.RowSpan="3" Grid.ColumnSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowItem}" CommandParameter="11" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Label Grid.Column="2"  Grid.Row="11"   Visibility="{Binding Item0}" Background="#FF41AD48"/>
        <Label Grid.Column="4"  Grid.Row="11"   Visibility="{Binding Item1}" Background="#FF41AD48" />
        <Label Grid.Column="6"  Grid.Row="11"   Visibility="{Binding Item2}" Background="#FF41AD48"  Grid.ColumnSpan="2" />
        <Label Grid.Column="9"  Grid.Row="11"   Visibility="{Binding Item3}" Background="#FF41AD48"  />
        <Label Grid.Column="12" Grid.Row="11"   Visibility="{Binding Item4}" Background="#FF41AD48" Grid.ColumnSpan="2"  />
        <Label Grid.Column="15" Grid.Row="11"   Visibility="{Binding Item5}" Background="#FF41AD48"  Grid.ColumnSpan="3" />
        <Label Grid.Column="2"  Grid.Row="16"  Visibility="{Binding Item6}" Background="#FF41AD48" />
        <Label Grid.Column="4"  Grid.Row="16"  Visibility="{Binding Item7}" Background="#FF41AD48" />
        <Label Grid.Column="5"  Grid.Row="16"  Visibility="{Binding Item8}" Background="#FF41AD48"  Grid.ColumnSpan="3" />
        <Label Grid.Column="9"  Grid.Row="16"  Visibility="{Binding Item9}" Background="#FF41AD48"  Grid.ColumnSpan="2" />
        <Label Grid.Column="12" Grid.Row="16"  Visibility="{Binding Item10}" Background="#FF41AD48" Grid.ColumnSpan="2" />
        <Label Grid.Column="14" Grid.Row="16"  Visibility="{Binding Item11}" Background="#FF41AD48"  Grid.ColumnSpan="5" />
        <Image x:Name="image" Grid.ColumnSpan="7" Grid.Column="10"  Visibility="{Binding messagePic}"
               Grid.Row="5" Grid.RowSpan="2" Source="/BS.NotionsView;component/NotionsImage/messageTool.png"
               Stretch="Fill" />
        <Items:NUCSpeaker Grid.ColumnSpan="6" Grid.RowSpan="4" 
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>
        <Label Grid.Column="7" Grid.Row="4" Grid.RowSpan="2"   >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="EmotionsLearnVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Image Source="{Binding ShowBut0}" Grid.Column="19" Grid.Row="9"   />
        <Image Source="{Binding ShowBut1}" Grid.Column="19" Grid.Row="14"  />
        <Label Grid.Column="19" Grid.Row="8" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="19" Grid.Row="13" Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding HideLine}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="8" Grid.RowSpan="4"
                   Grid.ColumnSpan="18" Visibility="{Binding LineItem0 }" />
        <Rectangle Grid.Column="1" Fill="#FF41AD48" Grid.Row="13" Grid.RowSpan="4"
                   Grid.ColumnSpan="18" Visibility="{Binding LineItem1 }" />

        <Image Source="{Binding LanguageBut2}" Grid.Column="15"  Grid.Row="1" />
        <Image Source="{Binding LanguageBut1}" Grid.Column="16" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut0}" Grid.Column="18" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Label  Grid.Column="15"  Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="16" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="18" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
    </Grid>
</UserControl>
