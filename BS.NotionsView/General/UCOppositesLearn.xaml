            </i:Interaction.Triggers>
        </Label>



        <Label x:Name="labelLeft1"  Visibility="{Binding Rect0}" Grid.Column="5" Grid.Row="9" Background="#FF41AD48" Grid.ColumnSpan="3"/>
        <Label x:Name="labelLeft2"  Visibility="{Binding Rect1}" Grid.Column="8" Grid.Row="9" Background="#FF41AD48" Grid.ColumnSpan="3"/>

        <Label x:Name="LPlayLeft" Grid.Column="5"  Grid.Row="8" Grid.ColumnSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowOpposit}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="8"  Grid.Row="8" Grid.ColumnSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowOpposit}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Image x:Name="imageMessage" Grid.Column="13" Grid.Row="5" Stretch="Fill" Source="{Binding messagePic}"
               Grid.ColumnSpan="7" Grid.RowSpan="3"/>
        <Image Source="{Binding LanguageBut2}" Grid.Column="16"  Grid.Row="1" Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut1}" Grid.Column="18" Grid.Row="1"   />
        <Image Source="{Binding LanguageBut0}" Grid.Column="19" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Label  Grid.Column="16"  Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
