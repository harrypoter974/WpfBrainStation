                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="7" Grid.Row="3" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
