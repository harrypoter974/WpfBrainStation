        <Items:NUCSpeaker Grid.ColumnSpan="5" Grid.RowSpan="4" 
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}"  VerticalAlignment="Top"/>
        <Label x:Name="LCwich"  Grid.Column="6" Grid.Row="4" Grid.ColumnSpan="4" Grid.RowSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ChangBackground}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LPlay1"   Grid.Column="2"   Grid.Row="9" Grid.RowSpan="4"                         >
