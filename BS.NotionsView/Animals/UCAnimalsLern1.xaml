        <Label x:Name="label9"  Visibility="{Binding Item8 }"  Background="#FF41AD48" Grid.Column="2"  Grid.Row="20" />
        <Label x:Name="label10" Visibility="{Binding Item9 }"  Background="#FF41AD48" Grid.Column="5"  Grid.Row="20" />
        <Label x:Name="label11" Visibility="{Binding Item10}"  Background="#FF41AD48" Grid.Column="10"  Grid.Row="20" Grid.ColumnSpan="2" />
        <Label x:Name="label12" Visibility="{Binding Item11}"  Background="#FF41AD48" Grid.Column="17" Grid.Row="20" Grid.ColumnSpan="6" />

        <Image x:Name="imageMessage" Grid.Column="11" Grid.Row="7"  Grid.ColumnSpan="11"  Source="{Binding messagePic}"/>

        <Label Grid.RowSpan="3"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="AnimalsMenuVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>


        <Image Source="{Binding ShowBut2}" Grid.Column="24" Grid.Row="18"/>
        <Image Source="{Binding ShowBut1}" Grid.Column="24" Grid.Row="14"  />
        <Image Source="{Binding ShowBut0}" Grid.Column="24" Grid.Row="10"   />
