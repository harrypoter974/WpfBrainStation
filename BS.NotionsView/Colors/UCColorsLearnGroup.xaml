<UserControl x:Class="BS.NotionsView.Colors.UCColorsLearnGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Colors"
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <!--<ImageBrush ImageSource="C:\Brain_Station\WpfBrainStationBrachoot\WpfBrainStation\Resources\Notions\Colors\ColorsGroup0.jpg"/>-->
        <ImageBrush ImageSource="{Binding BackgroundPic}"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="158*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="254*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <Items:NUCSpeaker Grid.ColumnSpan="11" Grid.RowSpan="4"
HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>
        <Image x:Name="imageMeseg" Grid.ColumnSpan="12" Grid.Column="20" Grid.Row="4" Grid.RowSpan="4"
               Source="{Binding messagePic}"  Stretch="Fill"/>
     
        <Label x:Name="LExerciseGroup2"  Grid.Column="13" Grid.Row="3" Grid.RowSpan="2" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="ExerciseGroupColorsVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Label x:Name="LColor0" Grid.Column="5"  Grid.Row="13"   Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor1" Grid.Column="9"  Grid.Row="13"                    >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor2" Grid.Column="12" Grid.Row="13" Grid.ColumnSpan="2"        >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor3" Grid.Column="17" Grid.Row="13" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor4" Grid.Column="22" Grid.Row="13"      >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor5" Grid.Column="26" Grid.Row="13" Grid.ColumnSpan="4">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Rectangle Name="Rectangle0" Grid.ColumnSpan="4" Grid.Column="4"  Fill="#FF41AD48" Grid.Row="15" Visibility="{Binding Color0}"/>
        <Rectangle Name="Rectangle1" Grid.ColumnSpan="3" Grid.Column="8"  Fill="#FF41AD48" Grid.Row="15" Visibility="{Binding Color1}"/>
        <Rectangle Name="Rectangle2" Grid.ColumnSpan="4" Grid.Column="11" Fill="#FF41AD48" Grid.Row="15" Visibility="{Binding Color2}" />
        <Rectangle Name="Rectangle3" Grid.ColumnSpan="6" Grid.Column="15" Fill="#FF41AD48" Grid.Row="15" Visibility="{Binding Color3}"/>
        <Rectangle Name="Rectangle4" Grid.ColumnSpan="4" Grid.Column="21" Fill="#FF41AD48" Grid.Row="15" Visibility="{Binding Color4}"/>
        <Rectangle Name="Rectangle5" Grid.ColumnSpan="5" Grid.Column="25" Fill="#FF41AD48" Grid.Row="15" Visibility="{Binding Color5}"/>
        <Label x:Name="label" Grid.Column="11" Grid.Row="9" Grid.ColumnSpan="10" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchPage}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="labelHome" Grid.ColumnSpan="2" Grid.RowSpan="3">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="ColorsMenuVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Label Grid.Column="29"  Grid.Row="17" Grid.ColumnSpan="4" Background="#FF41AD48">
  
        </Label>

        <Image Source="{Binding LanguageBut2}" Grid.Column="29"  Grid.Row="1" Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut1}" Grid.Column="31" Grid.Row="1"  Grid.ColumnSpan="2" />
        <Image Source="{Binding LanguageBut0}" Grid.Column="33" Grid.Row="1" />
        <Label  Grid.Column="29"  Grid.RowSpan="3"  Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="31" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="33" Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchLanguage}" CommandParameter="0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
    </Grid>
</UserControl>
