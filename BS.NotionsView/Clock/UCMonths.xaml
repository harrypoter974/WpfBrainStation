      <Items:NUCSpeaker Grid.ColumnSpan="9" Grid.RowSpan="3" 
 HorizontalAlignment="Left"  Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>
        <Image Grid.Column="15" Grid.Row="4" Grid.RowSpan="4" Grid.ColumnSpan="3" 
               Visibility="{Binding messagePic}" Source="/BS.NotionsView;component/NotionsImage/messageYear.png" Stretch="Fill"/>

      
