        <Label  Grid.Column="26"   Grid.Row="17"  Grid.ColumnSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="ClockExerciseCompassesVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LHour1"  Grid.Column="13" Grid.Row="12"    Grid.ColumnSpan="2">
