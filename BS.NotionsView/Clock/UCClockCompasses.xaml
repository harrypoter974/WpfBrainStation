                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Items:NUCSpeaker Grid.ColumnSpan="7" Grid.RowSpan="4"
 Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"  HorizontalAlignment="Left" />
        <Label x:Name="lMinute45" Grid.Column="20"  Grid.Row="8" Grid.RowSpan="3" Grid.ColumnSpan="6"  >
            <Label.Background>
                <ImageBrush ImageSource="{Binding LMinute2}"/>
            </Label.Background>
