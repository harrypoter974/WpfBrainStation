        <Label x:Name="LWord4"  Grid.Column="21" Grid.Row="14" Grid.ColumnSpan="4">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SetWord}"  CommandParameter="4"/>
