        </Label>
        <Label x:Name="LWord5"  Grid.Column="26" Grid.Row="14" Grid.ColumnSpan="5">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SetWord}"  CommandParameter="5"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Items:UCSpeaker Grid.ColumnSpan="12"  HorizontalAlignment="Left" Margin="{Binding SpeakerMargin}" Grid.RowSpan="3" VerticalAlignment="Top" />
        <Label x:Name="labelHome"  Grid.RowSpan="2" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuHebrewVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label Grid.Column="16" Grid.Row="4"  Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="WritingWordsVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
