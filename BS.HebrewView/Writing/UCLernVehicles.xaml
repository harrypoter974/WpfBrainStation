                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LWord2"  Grid.Column="9" Grid.Row="14" Grid.ColumnSpan="4">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
