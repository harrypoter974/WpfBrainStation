            </TextBlock.InputBindings></TextBlock>
        <Label x:Name="labelHome" MouseDown="labelHome_MouseDown" Grid.ColumnSpan="2" />
        <Label x:Name="labelCansel" 
               Grid.Column="0"  Grid.Row="9"  Grid.ColumnSpan="5" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding Clear}" />
            </Label.InputBindings>
        </Label>  
        <Label Grid.Column="5"  Grid.Row="9"  Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding IsBig}" />
            </Label.InputBindings>
            <Label.Background>
                <ImageBrush ImageSource="{Binding IsBigBut}"/>
            </Label.Background>
        </Label>
        <Label x:Name="labelSave" Grid.Column="7" Grid.Row="9"  Grid.ColumnSpan="4"  MouseDown="labelHome_MouseDown"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding Save}" />
            </Label.InputBindings>
        </Label>

    </Grid>
</Window>
