<Window x:Class="BS.Items.WinEnSettingsLetters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BS.Items"
        mc:Ignorable="d"
        Title="WinEnSettingsLetters" Height="740" Width="550"  WindowStyle="None"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" 
        FontSize="70" Foreground="White" >
    <Window.Background>
        <ImageBrush ImageSource="ItemsImage/WinEnSettingsLetters.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="52"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="103*"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="labelA" Text="{Binding letterPic0}" Grid.Column="1"  Grid.Row="3" 
                   Grid.ColumnSpan="3" TextAlignment="Center" Margin="1" Background="{Binding letter0}">
            <TextBlock.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="0"/>
            </TextBlock.InputBindings>
        </TextBlock>
        <TextBlock x:Name="labelB" Text="{Binding letterPic1}" Grid.Column="4" 
                   Background="{Binding letter1}" Grid.Row="3" TextAlignment="Center" Margin="1">
