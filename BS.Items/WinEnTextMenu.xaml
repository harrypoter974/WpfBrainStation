<Window x:Class="BS.Items.WinEnTextMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BS.Items"
        mc:Ignorable="d"
        Title="WinEnTextMenu"  Height="300" Width="150" WindowStyle="None"  
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ListBox1" Grid.ColumnSpan="2" Background="#FF41AD48"   Foreground="White" >
        </ListBox>
        <Button x:Name="buttonCancel" Content="ביטול" Grid.Row="1" Click="buttonCancel_Click"
                Background="#FF007C46"  Foreground="White"/>
        <Button x:Name="buttonSave" Content="בחר קובץ" Grid.Column="1" Grid.Row="1"  Foreground="White" 
                Click="buttonSave_Click" Background="#FF007C46"/>


    </Grid>
</Window>
