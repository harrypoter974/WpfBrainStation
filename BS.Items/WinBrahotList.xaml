<Window x:Class="BS.Items.WinBrahotList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BS.Items"
        mc:Ignorable="d"
        Title="WinBrahotList"  Height="350" Width="250"  FontFamily="Times New Roman" FontSize="35" Foreground="White"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" >
    <Grid>
        <Border  BorderBrush="Navy" BorderThickness="6" CornerRadius="8">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="LightCyan" Offset="1.0" />
                    <GradientStop Color="LightBlue" Offset="0.5" />
                    <GradientStop Color="DarkTurquoise" Offset="0.0" />
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock Text="בחר שיטה" HorizontalAlignment="Center" FontWeight="Bold"> </TextBlock>
                <ListBox x:Name="ListBox1" SelectionChanged="ListBox1_Selected" BorderBrush="GreenYellow" 
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="5"  FontWeight ="Bold" Background="ForestGreen">
    
            </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>
