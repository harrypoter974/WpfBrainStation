<UserControl x:Class="BS.Items.UCButCardOrWrote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.Items"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid>
        <Label x:Name="LBotton" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding ChangeCardOrWrote}"/>
            </Label.Background>
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding CardOrWrotePic}"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
