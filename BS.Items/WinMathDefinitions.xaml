<Window x:Class="BS.Items.WinMathDefinitions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BS.Items"
        mc:Ignorable="d"
        Title="WinMathDefinitions" Height="600" Width="450" WindowStyle="None" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="ItemsImage/WinMathDefinitions.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="72*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelClose" MouseDown="labelClose_MouseDown"  />
        <Image x:Name="ImageDomain" Grid.Column="4"  Grid.Row="2"  Grid.ColumnSpan="8" Stretch="Fill" Source="{Binding DomainPic}"/>
        <Label x:Name="lDomain3" Grid.Column="3"  Grid.Row="2"  Grid.ColumnSpan="3" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetDomain}" CommandParameter="2"  /></Label.InputBindings></Label>
        <Label x:Name="lDomain2" Grid.Column="7"  Grid.Row="2"  Grid.ColumnSpan="2" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetDomain}" CommandParameter="1"  /></Label.InputBindings></Label>
        <Label x:Name="lDomain1" Grid.Column="10"  Grid.Row="2"  Grid.ColumnSpan="3"><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetDomain}" CommandParameter="0"  /></Label.InputBindings></Label>

        <Image  x:Name="ImageType" Grid.Column="7"  Grid.Row="9"  Grid.ColumnSpan="2" Grid.RowSpan="5" Stretch="Fill" Source="{Binding EnterTypePic}"/>
  
        <Label x:Name="lEnterTypeCarde"   Grid.Column="7"  Grid.Row="9"  Grid.ColumnSpan="2"><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding EnterType}" CommandParameter="0"/></Label.InputBindings></Label>
        <Label x:Name="lEnterTypeWrite"   Grid.Column="7"  Grid.Row="11" Grid.ColumnSpan="2"><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding EnterType}" CommandParameter="1"/></Label.InputBindings></Label>
        <Label x:Name="lEnterTypeBut"     Grid.Column="7"  Grid.Row="13" Grid.ColumnSpan="2"><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding EnterType}" CommandParameter="2"  /></Label.InputBindings></Label>

        <Label x:Name="labelSaveChange"  Grid.Column="2"  Grid.Row="15"  Grid.ColumnSpan="11" MouseDown="labelClose_MouseDown">
        </Label>

    </Grid>
</Window>
