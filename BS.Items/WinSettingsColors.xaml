<Window x:Class="BS.Items.WinSettingsColors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BS.Items"
        mc:Ignorable="d"
      Title="WinHeSettingsLetters"  Height="740" Width="550"  WindowStartupLocation="CenterScreen" WindowStyle="None"  ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="ItemsImage/WinSettingsColors.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="146*"/>
            <RowDefinition Height="155*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="154*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="154*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Label  MouseDown="Label_MouseDown"   />
        <Border BorderThickness="8" BorderBrush="{Binding  Color0}" Grid.Column="1"   Grid.Row="2"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="0"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding  Color1}" Grid.Column="4"   Grid.Row="2"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="1"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding  Color2}" Grid.Column="7"   Grid.Row="2"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="2"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding  Color3}" Grid.Column="10"  Grid.Row="2"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="3"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding  Color4}" Grid.Column="1"   Grid.Row="4"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="4"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding  Color5}" Grid.Column="4"   Grid.Row="4"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="5"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding  Color6}" Grid.Column="7"   Grid.Row="4"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="6"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding  Color7}" Grid.Column="10"  Grid.Row="4"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="7"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding  Color8}" Grid.Column="1"   Grid.Row="6"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="8"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding  Color9}" Grid.Column="4"   Grid.Row="6"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="9"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding Color10}" Grid.Column="7"   Grid.Row="6"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="10"/>
            </Border.InputBindings>
        </Border>
        <Border BorderThickness="8" BorderBrush="{Binding Color11}" Grid.Column="10"  Grid.Row="6"  Grid.ColumnSpan="2" >
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ColorType}" CommandParameter="11"/>
            </Border.InputBindings>
        </Border>

        <Label  Grid.Column="2"   Grid.Row="8"  Grid.ColumnSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding Clear}" />
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="8"   Grid.Row="8"  Grid.ColumnSpan="3" MouseDown="Label_MouseDown">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding Save}" />
            </Label.InputBindings>
        </Label>

    </Grid>
</Window>
