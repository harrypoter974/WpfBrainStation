<Window x:Class="BS.Items.WinHeVowels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BS.Items"
        mc:Ignorable="d"
        Title="WinHeVowels" Height="285" Width="550" 
       WindowStartupLocation="CenterScreen"  WindowStyle="None"  ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="ItemsImage/WinHeVowels.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Label   Grid.Column="1" Grid.Row="3" Background="{Binding letter0}"/>
        <Label   Grid.Column="3" Grid.Row="3" Background="{Binding letter1}" />
        <Label   Grid.Column="5" Grid.Row="3" Background="{Binding letter2}" />
        <Label   Grid.Column="7" Grid.Row="3" Background="{Binding letter3}"  Grid.ColumnSpan="2"/>
        <Label   Grid.Column="10" Grid.Row="3" Background="{Binding letter4}" />
        <Label   Grid.Column="12" Grid.Row="3" Background="{Binding letter5}"  Grid.ColumnSpan="2"/>
        <Label   Grid.Column="15" Grid.Row="3" Background="{Binding letter6}" />
        <Label   Grid.Column="17" Grid.Row="3" Background="{Binding letter7}" />
        <Label  Grid.Column="19" Grid.Row="3" Background="{Binding letter8}" />

        <Label  Grid.Row="2"  Grid.Column="1" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="0"/>
            </Label.InputBindings>
        </Label>
        <Label   Grid.Column="3" Grid.RowSpan="2"   Grid.Row="2"    >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="1"/>
            </Label.InputBindings>
        </Label>
        <Label   Grid.Column="5" Grid.RowSpan="2"    Grid.Row="2"             >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="2"/>
            </Label.InputBindings>
        </Label>
        <Label   Grid.Column="7" Grid.RowSpan="2"   Grid.Row="2"    Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="3"/>
            </Label.InputBindings>
        </Label>
        <Label   Grid.Column="10" Grid.RowSpan="2"   Grid.Row="2"    >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="4"/>
            </Label.InputBindings>
        </Label>
        <Label   Grid.Column="12" Grid.RowSpan="2"   Grid.Row="2" Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="5"/>
            </Label.InputBindings>
        </Label>
        <Label   Grid.Column="15" Grid.RowSpan="2"   Grid.Row="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="6"/>
            </Label.InputBindings>
        </Label>
        <Label   Grid.Column="17" Grid.RowSpan="2"   Grid.Row="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="7"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="19" Grid.RowSpan="2"  Grid.Row="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding letterType}" CommandParameter="8"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelSave" Grid.Column="13" Grid.Row="5"  Grid.ColumnSpan="6"
              MouseDown="labelHome_MouseDown">
   
        </Label>
        <Label  Grid.Column="2"  Grid.Row="5"  Grid.ColumnSpan="6" >
                     <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding Clear}" />
            </Label.InputBindings>
        </Label>
        <Label   MouseDown="labelHome_MouseDown"/>
    </Grid>
</Window>
