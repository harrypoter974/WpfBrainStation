<UserControl x:Class="BS.MenuViews.Control.UCMenuControlGame"
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews.Control"
             mc:Ignorable="d" 
                    d:DesignHeight="900" d:DesignWidth="1000"   >
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MenuViews;component/MenuImage/UCMenuControlGame.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="235*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="315*"/>
            <ColumnDefinition Width="331*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="151*"/>
        </Grid.RowDefinitions>
        <Items:NUCBlueUCSpeaker   VerticalAlignment="Top"  Margin="{Binding SpeakerMargin}" Grid.RowSpan="3"
         Grid.ColumnSpan="5" HorizontalAlignment="Left"/>
        <Label >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="MenuControlVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AddPage}" CommandParameter="TriviaVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="4"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AddPage}" CommandParameter="LaddersAndRopesVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="6"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AddPage}" CommandParameter="QuickThinkingVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="8"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AddPage}" CommandParameter="MemoryVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="10" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AddPage}" CommandParameter="VisualMemoryVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="12" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AddPage}" CommandParameter="SudokuVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="14" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AddPage}" CommandParameter="Puzzle25VM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="16" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AddPage}" CommandParameter="MenuEnGameVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="18" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AddPage}" CommandParameter="MenuEnGameVM"/>
            </Label.InputBindings>
        </Label>
      
        <Label  Grid.Column="4" Grid.Row="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding RemovePage}" CommandParameter="TriviaVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.Row="4"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding RemovePage}" CommandParameter="LaddersAndRopesVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.Row="6"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding RemovePage}" CommandParameter="QuickThinkingVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.Row="8"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding RemovePage}" CommandParameter="MemoryVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.Row="10" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding RemovePage}" CommandParameter="VisualMemoryVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.Row="12" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding RemovePage}" CommandParameter="SudokuVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.Row="14" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding RemovePage}" CommandParameter="Puzzle25VM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.Row="16" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding RemovePage}" CommandParameter="EnPronunciationVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.Row="18" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding RemovePage}" CommandParameter="EnPronunciationVM"/>
            </Label.InputBindings>
        </Label>
        
        <Label  Grid.Column="6" Grid.Row="2"  >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundBut0}"/>
            </Label.Background>
        </Label>
        <Label  Grid.Column="6" Grid.Row="4"  >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundBut1}"/>
            </Label.Background>
        </Label>
        <Label  Grid.Column="6" Grid.Row="6"  >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundBut2}"/>
            </Label.Background>
        </Label>
        <Label  Grid.Column="6" Grid.Row="8"  >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundBut0}"/>
            </Label.Background>
        </Label>
        <Label  Grid.Column="6" Grid.Row="10" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundBut3}"/>
            </Label.Background>
        </Label>
        <Label  Grid.Column="6" Grid.Row="12" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundBut4}"/>
            </Label.Background>
        </Label>
        <Label  Grid.Column="6" Grid.Row="14" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundBut5}"/>
            </Label.Background>
        </Label>
        <Label  Grid.Column="6" Grid.Row="16" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundBut6}"/>
            </Label.Background>
        </Label>
        <Label  Grid.Column="6" Grid.Row="18" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundBut7}"/>
            </Label.Background>
        </Label>

    </Grid>
</UserControl>
