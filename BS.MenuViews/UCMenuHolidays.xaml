<UserControl x:Class="BS.MenuViews.UCMenuHolidays"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
                xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items" 
             mc:Ignorable="d" 
                      d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuHolidays.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="215*"/>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="203*"/>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="168*"/>
            <ColumnDefinition Width="201*"/>
            <ColumnDefinition Width="112*"/>
        </Grid.ColumnDefinitions>
        <Label  Name="labelHome" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Label.Background>
                <ImageBrush ImageSource="{Binding HomeBut}"  Stretch="None"/>
            </Label.Background>
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GOHome}" CommandParameter="MenuJudaismVM"/>
                <MouseBinding MouseAction="RightClick"  Command="{Binding LookHome}" />
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="3"  Grid.Row="5" Grid.ColumnSpan="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="10"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="3"  Grid.Row="7" Grid.ColumnSpan="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="11"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="3"  Grid.Row="9" Grid.ColumnSpan="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="1"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="3"  Grid.Row="11" Grid.ColumnSpan="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="2"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="3"  Grid.Row="13" Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="3"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4"  Grid.Row="15" Grid.ColumnSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="4"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="6"  Grid.Row="5" Grid.ColumnSpan="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="5"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="6"  Grid.Row="7" Grid.ColumnSpan="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="6"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="6"  Grid.Row="9" Grid.ColumnSpan="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="7"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="6"  Grid.Row="11" Grid.ColumnSpan="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="8"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="6"  Grid.Row="13" Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="9"/>
            </Label.InputBindings>
        </Label>
     
        <Label   Grid.Column="4"  Grid.Row="3" Grid.ColumnSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToHoliday}"  CommandParameter="0"/>
            </Label.InputBindings>
        </Label>
        <Items:UCBlueUCSpeaker  Grid.ColumnSpan="5" Grid.RowSpan="4" HorizontalAlignment="Left" 
 Margin="{Binding SpeakerMargin}" VerticalAlignment="Top" x:Name="uCSpeaker1"  />

    </Grid>
</UserControl>
