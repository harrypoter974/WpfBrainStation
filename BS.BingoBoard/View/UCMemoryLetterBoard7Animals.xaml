<UserControl xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items" 
             x:Class="BS.BingoBoard.View.UCMemoryLetterBoard7Animals"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.BingoBoard.View"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             mc:Ignorable="d" 
         d:DesignHeight="434" d:DesignWidth="834"  >
    <!-- Height="312.48" Width="600.48" -->
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.BingoBoard;component/BingoBoardImage/UCMemoryLetterBoard7Animals.png"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Items:UCBlinkBord Grid.Row="1" Grid.RowSpan="9" Grid.Column="18" Grid.ColumnSpan="3" Visibility="{Binding BaseWinBlink}" />

        <Image x:Name="textBlock0" Grid.Column="1"  Grid.Row="12"  Source="{Binding TB0}"/>
        <Image x:Name="textBlock1" Grid.Column="5"  Grid.Row="12"  Source="{Binding TB1}"/>
        <Image x:Name="textBlock2" Grid.Column="9"  Grid.Row="12"  Source="{Binding TB2}"/>
        <Image x:Name="textBlock3" Grid.Column="13" Grid.Row="12"  Source="{Binding TB3}"/>
        <Image x:Name="textBlock4" Grid.Column="17" Grid.Row="12"  Source="{Binding TB4}" Grid.ColumnSpan="4"/>
        <Image x:Name="textBlock5" Grid.Column="24" Grid.Row="12"  Source="{Binding TB5}"/>
        <Image x:Name="textBlock6" Grid.Column="28" Grid.Row="12"  Source="{Binding TB6}"/>
      
        <Image x:Name="Image0" Grid.Column="12"  Grid.Row="5" Grid.ColumnSpan="3" Source="{Binding TBQuestion}" Grid.RowSpan="3"    />
        <Label Grid.ColumnSpan="4" Background="{Binding Background0}"                 Grid.Row="11" Grid.RowSpan="3" />
        <Label Grid.ColumnSpan="5" Background="{Binding Background1}"   Grid.Column="3"   Grid.Row="11" Grid.RowSpan="3" />
        <Label Grid.ColumnSpan="5" Background="{Binding Background2}"   Grid.Column="7"   Grid.Row="11" Grid.RowSpan="3" />
        <Label Grid.ColumnSpan="5" Background="{Binding Background3}"   Grid.Column="11"  Grid.Row="11" Grid.RowSpan="3" />
        <Label Grid.ColumnSpan="7" Background="{Binding Background4}"   Grid.Column="16"  Grid.Row="11" Grid.RowSpan="3" />
        <Label Grid.ColumnSpan="5" Background="{Binding Background5}"   Grid.Column="22"  Grid.Row="11" Grid.RowSpan="3" />
        <Label Grid.ColumnSpan="3" Background="{Binding Background6}"   Grid.Column="27"  Grid.Row="11" Grid.RowSpan="3" />
        <Label  Grid.Column="1" Grid.Row="12" BorderThickness="6"  BorderBrush="{Binding TBAnswer0}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding TapAnswer}" CommandParameter="0"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="5" Grid.Row="12" BorderThickness="6"  BorderBrush="{Binding TBAnswer1}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding TapAnswer}" CommandParameter="1"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9" Grid.Row="12" BorderThickness="6"  BorderBrush="{Binding TBAnswer2}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding TapAnswer}" CommandParameter="2"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="13" Grid.Row="12"  BorderThickness="6"  BorderBrush="{Binding TBAnswer3}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding TapAnswer}" CommandParameter="3"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="17" Grid.Row="12" Grid.ColumnSpan="4" BorderThickness="6"  BorderBrush="{Binding TBAnswer4}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding TapAnswer}" CommandParameter="4"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="24" Grid.Row="12" BorderThickness="6"  BorderBrush="{Binding TBAnswer5}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding TapAnswer}" CommandParameter="5"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="28"  Grid.Row="12" BorderThickness="6"  BorderBrush="{Binding TBAnswer6}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding TapAnswer}" CommandParameter="6"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Items:UCBlinkBord Visibility="{Binding BB0}" Grid.Column="1"  Grid.Row="12" />
        <Items:UCBlinkBord Visibility="{Binding BB1}" Grid.Column="5"  Grid.Row="12" />
        <Items:UCBlinkBord Visibility="{Binding BB2}" Grid.Column="9"  Grid.Row="12" />
        <Items:UCBlinkBord Visibility="{Binding BB3}" Grid.Column="13" Grid.Row="12" />
        <Items:UCBlinkBord Visibility="{Binding BB4}" Grid.Column="17" Grid.Row="12" Grid.ColumnSpan="4" />
        <Items:UCBlinkBord Visibility="{Binding BB5}" Grid.Column="24" Grid.Row="12" />
        <Items:UCBlinkBord Visibility="{Binding BB6}" Grid.Column="28" Grid.Row="12" />

        <Image x:Name="image0"  Grid.Column="19" Grid.Row="6" Grid.RowSpan="2" Source="{Binding TBSoldier0}" VerticalAlignment="Bottom"/>
        <Image x:Name="image1"  Grid.Column="19" Grid.Row="4" Grid.RowSpan="3" Source="{Binding TBSoldier1}"  VerticalAlignment="Bottom"/>
        <Image x:Name="image2"  Grid.Column="19" Grid.Row="3" Grid.RowSpan="3" Source="{Binding TBSoldier2}"  VerticalAlignment="Bottom"/>
        <Image x:Name="image3"  Grid.Column="19" Grid.Row="2" Grid.RowSpan="2" Source="{Binding TBSoldier3}"  VerticalAlignment="Bottom"/>
        <Image x:Name="image4"  Grid.Column="19" Grid.RowSpan="3" Source="{Binding TBSoldier4}"  VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
