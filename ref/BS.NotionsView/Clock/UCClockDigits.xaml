<UserControl x:Class="BS.NotionsView.Clock.UCClockDigits"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Clock"
             mc:Ignorable="d" 
                d:DesignHeight="900" d:DesignWidth="1000" FontSize="60" FontFamily="Times New Roman"  FontWeight="Bold" >
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.NotionsView;component/NotionsImage/UCClockDigits.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="414*"/>
        </Grid.RowDefinitions>
        <!--<Items:UCSpeaker Grid.Column="2"  Grid.Row="1" />-->
        <Label x:Name="LHour1"  Grid.Column="14" Grid.Row="12"  Grid.ColumnSpan="2" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="1"   /></Label.InputBindings></Label>
        <Label x:Name="LHour2"  Grid.Column="16" Grid.Row="12"                      ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="2"   /></Label.InputBindings></Label>
        <Label x:Name="LHour3"  Grid.Column="17" Grid.Row="12"  Grid.ColumnSpan="2" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="3"   /></Label.InputBindings></Label>
        <Label x:Name="LHour4"  Grid.Column="19" Grid.Row="12"                      ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="4"   /></Label.InputBindings></Label>
        <Label x:Name="LHour5"  Grid.Column="20" Grid.Row="12"  Grid.ColumnSpan="2" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="5"   /></Label.InputBindings></Label>
        <Label x:Name="LHour6"  Grid.Column="22" Grid.Row="12"  Grid.ColumnSpan="2" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="6"   /></Label.InputBindings></Label>
        <Label x:Name="LHour7"  Grid.Column="24" Grid.Row="12"  Grid.ColumnSpan="2" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="7"   /></Label.InputBindings></Label>
        <Label x:Name="LHour8"  Grid.Column="26" Grid.Row="12"  Grid.ColumnSpan="2" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="8"   /></Label.InputBindings></Label>
        <Label x:Name="LHour9"  Grid.Column="28" Grid.Row="12"                      ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="9"   /></Label.InputBindings></Label>
        <Label x:Name="LHour10" Grid.Column="29" Grid.Row="12"  Grid.ColumnSpan="2" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="10"  /></Label.InputBindings></Label>
        <Label x:Name="LHour11" Grid.Column="31" Grid.Row="12"                      ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="11"  /></Label.InputBindings></Label>
        <Label x:Name="LHour12" Grid.Column="32" Grid.Row="12"                      ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="12"  /></Label.InputBindings></Label>
        <Label x:Name="LToCompasses" Grid.Column="4" Grid.Row="3" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="ClockCompassesVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelChangeLevel"   Grid.Column="1" Grid.Row="6"  Grid.ColumnSpan="4" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ChangeLevel}" />
            </Label.InputBindings>
            <Label.Background>
                <ImageBrush ImageSource="{Binding IsMinuteBut}"/>
            </Label.Background>
        </Label>
        <Label x:Name="LToExercise" Grid.Column="1" Grid.Row="10" Grid.ColumnSpan="3" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="ClockExerciseDigitalVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelHome" Grid.ColumnSpan="2" Grid.RowSpan="2" Height="47" VerticalAlignment="Top" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHeGeneralVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="lMinute45" Grid.Column="21"  Grid.Row="8" Grid.RowSpan="3" Grid.ColumnSpan="6"><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetMinute}" CommandParameter="45" /></Label.InputBindings></Label>
        <Label x:Name="lMinute30" Grid.Column="18"  Grid.Row="14" Grid.ColumnSpan="5"                ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetMinute}" CommandParameter="30" /></Label.InputBindings></Label>
        <Label x:Name="lMinute15" Grid.Column="25"  Grid.Row="14" Grid.ColumnSpan="5"                ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding SetMinute}" CommandParameter="15" /></Label.InputBindings></Label>
        <Image x:Name="imageMeseg" Grid.ColumnSpan="16" Grid.Column="15" Grid.Row="4" Grid.RowSpan="3"/>


        <TextBlock x:Name="TBHour2" Grid.Column="6" Grid.Row="16"    Text="{Binding TextHour2}"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="TBHour1" Grid.Column="8" Grid.Row="16"    Text="{Binding TextHour1}"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="TBMinute2" Grid.Column="10" Grid.Row="16" Text="{Binding TextMinute2}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="TBMinute1" Grid.Column="12" Grid.Row="16" Text="{Binding TextMinute1}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Rectangle Name="Rectangle1" Grid.ColumnSpan="16" Grid.Column="14"  Grid.Row="14" Fill="#FF41AD48" Visibility="{Binding IsMinute}" />
        <Rectangle Name="Rectangle0" Grid.ColumnSpan="7" Grid.Column="20"  Grid.Row="8"   Fill="#FF41AD48" Visibility="{Binding ElementName=Rectangle1, Path=Visibility}"   Grid.RowSpan="3" />
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
    </Grid>
</UserControl>
