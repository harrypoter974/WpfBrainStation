<UserControl x:Class="BS.NotionsView.Colors.UCColorsLearnGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.Colors"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="{Binding BackgroundPic}"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="158*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="254*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="134*"/>
        </Grid.RowDefinitions>

        <!--<Items:UCSpeaker Grid.Column="2"  Grid.Row="1"/>-->
        <Image x:Name="imageMeseg" Grid.ColumnSpan="10" Grid.Column="16" Grid.Row="3" Grid.RowSpan="4"  Stretch="Fill"/>
        <Label x:Name="labelHome" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHeGeneralVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLearnGroup2" Grid.Column="1" Grid.Row="3" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding SwitchPage}" />
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLearnGroup1" Grid.Column="4" Grid.Row="3" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding SwitchPage}" />
            </Label.InputBindings>
        </Label>
        <Label x:Name="LExerciseGroup2"  Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="3"  Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToExercise}" CommandParameter="0"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LExerciseGroup1"  Grid.Column="4" Grid.Row="6" Grid.ColumnSpan="2"  Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToExercise}" CommandParameter="1"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LExerciseColors"  Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="5">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="ExerciseColorsVM"/>
            </Label.InputBindings>
        </Label>

        <Label x:Name="LColor0" Grid.Column="5"  Grid.Row="10"   Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ShowColor}" CommandParameter="0" /></Label.InputBindings></Label>
        <Label x:Name="LColor1" Grid.Column="9"  Grid.Row="10"                    ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowColor}" CommandParameter="1" /></Label.InputBindings></Label>
        <Label x:Name="LColor2" Grid.Column="12" Grid.Row="10"                    ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowColor}" CommandParameter="2" /></Label.InputBindings></Label>
        <Label x:Name="LColor3" Grid.Column="15" Grid.Row="10" Grid.ColumnSpan="2"><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowColor}" CommandParameter="3" /></Label.InputBindings></Label>
        <Label x:Name="LColor4" Grid.Column="19" Grid.Row="10"                    ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowColor}" CommandParameter="4" /></Label.InputBindings></Label>
        <Label x:Name="LColor5" Grid.Column="22" Grid.Row="10" Grid.ColumnSpan="2"><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowColor}" CommandParameter="5" /></Label.InputBindings></Label>
        <Rectangle Name="Rectangle0" Grid.ColumnSpan="4" Grid.Column="4"  Fill="#FF41AD48" Grid.Row="12" />
        <Rectangle Name="Rectangle1" Grid.ColumnSpan="3" Grid.Column="8"  Fill="#FF41AD48" Grid.Row="12" />
        <Rectangle Name="Rectangle2" Grid.ColumnSpan="3" Grid.Column="11" Fill="#FF41AD48" Grid.Row="12" />
        <Rectangle Name="Rectangle3" Grid.ColumnSpan="4" Grid.Column="14" Fill="#FF41AD48" Grid.Row="12" />
        <Rectangle Name="Rectangle4" Grid.ColumnSpan="3" Grid.Column="18" Fill="#FF41AD48" Grid.Row="12" />
        <Rectangle Name="Rectangle5" Grid.ColumnSpan="4" Grid.Column="21" Fill="#FF41AD48" Grid.Row="12" />
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
    </Grid>
</UserControl>
