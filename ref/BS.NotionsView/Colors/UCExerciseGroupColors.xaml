        <Label x:Name="LExerciseColors"  Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="7" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="ExerciseColorsVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelHome" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHeGeneralVM"/>
