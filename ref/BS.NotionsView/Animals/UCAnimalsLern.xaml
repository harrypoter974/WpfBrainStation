<UserControl x:Class="BS.NotionsView.NotionsImage.Animals.UCAnimalsLern"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.NotionsView.NotionsImage.Animals"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000"   >
    <UserControl.Background>
        <ImageBrush ImageSource="{Binding BackgroundPic}"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="82*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="174*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="143*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="166*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="48*"/>
        </Grid.RowDefinitions>

        <!--<Items:UCSpeaker Grid.Column="1" Grid.Row="1" />-->
        <Label x:Name="labelHome"    Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHeGeneralVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LCwich"  Grid.Column="6" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ChangBackground}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LPlay1"   Grid.Column="2"   Grid.Row="7" Grid.RowSpan="2"                         >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="0" /></Label.InputBindings></Label>
        <Label x:Name="LPlay2"   Grid.Column="5"   Grid.Row="7" Grid.RowSpan="2"                         ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="1" /></Label.InputBindings></Label>
        <Label x:Name="LPlay3"   Grid.Column="8"   Grid.Row="7"  Grid.ColumnSpan="2" Grid.RowSpan="2"    ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="2" /></Label.InputBindings></Label>
        <Label x:Name="LPlay4"   Grid.Column="12"  Grid.Row="7" Grid.ColumnSpan="4" Grid.RowSpan="2"     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="3" /></Label.InputBindings></Label>
        <Label x:Name="LPlay5"   Grid.Column="2"   Grid.Row="9" Grid.RowSpan="2"                         ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="4" /></Label.InputBindings></Label>
        <Label x:Name="LPlay6"   Grid.Column="5"    Grid.Row="9" Grid.RowSpan="2"                        ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="5" /></Label.InputBindings></Label>
        <Label x:Name="LPlay7"   Grid.Column="8" Grid.ColumnSpan="2" Grid.Row="9" Grid.RowSpan="2"       ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="6" /></Label.InputBindings></Label>
        <Label x:Name="LPlay8"   Grid.Column="12"  Grid.Row="9" Grid.ColumnSpan="4" Grid.RowSpan="2"     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="7" /></Label.InputBindings></Label>
        <Label x:Name="LPlay9"    Grid.Column="2"  Grid.Row="11" Grid.RowSpan="2"                        ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="8" /></Label.InputBindings></Label>
        <Label x:Name="LPlay10"   Grid.Column="5"  Grid.Row="11" Grid.RowSpan="2"                        ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="9" /></Label.InputBindings></Label>
        <Label x:Name="LPlay11"   Grid.Column="8"  Grid.Row="11"  Grid.ColumnSpan="2" Grid.RowSpan="2"   ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="10"/></Label.InputBindings></Label>
        <Label x:Name="LPlay12"   Grid.Column="12" Grid.Row="11"  Grid.ColumnSpan="4" Grid.RowSpan="2"   ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding ShowAnimals}" CommandParameter="11"/></Label.InputBindings></Label>

        <Label x:Name="label1"  ContentStringFormat="0"  Background="#FF41AD48" Grid.Column="2"  Grid.Row="8"  />
        <Label x:Name="label2"  ContentStringFormat="1"  Background="#FF41AD48" Grid.Column="5"  Grid.Row="8"  />
        <Label x:Name="label3"  ContentStringFormat="2"  Background="#FF41AD48" Grid.Column="8"  Grid.Row="8"  Grid.ColumnSpan="2" />
        <Label x:Name="label4"  ContentStringFormat="3"  Background="#FF41AD48" Grid.Column="12" Grid.Row="8" Grid.ColumnSpan="4"  />
        <Label x:Name="label5"  ContentStringFormat="4"  Background="#FF41AD48" Grid.Column="2"  Grid.Row="10"  />
        <Label x:Name="label6"  ContentStringFormat="5"  Background="#FF41AD48" Grid.Column="5"  Grid.Row="10"  />
        <Label x:Name="label7"  ContentStringFormat="6"  Background="#FF41AD48" Grid.Column="8"  Grid.Row="10"  Grid.ColumnSpan="3" />
        <Label x:Name="label8"  ContentStringFormat="7"  Background="#FF41AD48" Grid.Column="12" Grid.Row="10"   Grid.ColumnSpan="4" />
        <Label x:Name="label9"  ContentStringFormat="8"  Background="#FF41AD48" Grid.Column="2"  Grid.Row="12" />
        <Label x:Name="label10" ContentStringFormat="9"  Background="#FF41AD48" Grid.Column="5"  Grid.Row="12" />
        <Label x:Name="label11" ContentStringFormat="10" Background="#FF41AD48" Grid.Column="8"  Grid.Row="12" Grid.ColumnSpan="2" />
        <Label x:Name="label12" ContentStringFormat="11" Background="#FF41AD48" Grid.Column="12" Grid.Row="12" Grid.ColumnSpan="4" />

        <Image x:Name="imageMessage" Grid.Column="9" Grid.Row="3"  Grid.ColumnSpan="6" Grid.RowSpan="3" />
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
    </Grid>
</UserControl>
