<UserControl x:Class="BS.Items.UCTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.Items"
             mc:Ignorable="d" 
          d:DesignHeight="200" d:DesignWidth="200">
    <UserControl.Background>
        <ImageBrush ImageSource="ItemsImage/UCTimer.png"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TBTime" Grid.Column="1" Grid.Row="1" Text="" Foreground="#FFED1C24" FontSize="34"  FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>


    </Grid>
</UserControl>
