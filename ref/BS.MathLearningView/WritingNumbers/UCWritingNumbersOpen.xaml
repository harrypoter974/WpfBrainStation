<UserControl x:Class="BS.MathLearningView.WritingNumbers.UCWritingNumbersOpen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.WritingNumbers"
             mc:Ignorable="d" 
              d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MathLearningView;component/MathImage/UCWritingNumbersOpen.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="14*" />
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="51*" />
            <RowDefinition Height="97*"/>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="271*" />
            <RowDefinition Height="93*" />
            <RowDefinition Height="264*"/>
            <RowDefinition Height="87*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*" />
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="141*" />
            <ColumnDefinition Width="23*" />
            <ColumnDefinition Width="135*" />
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="22*" />
            <ColumnDefinition Width="108*" />
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="16*" />
        </Grid.ColumnDefinitions>
        <Label    x:Name="labelHome"  Grid.RowSpan="5" Grid.ColumnSpan="2"  />
        <Label  Grid.Row="8" Grid.Column="4"  x:Name="L0label"   Grid.ColumnSpan="3"  />
        <Label  Grid.Row="8" Grid.Column="8"  x:Name="L1label"    />
        <Label  Grid.Row="8" Grid.Column="10" x:Name="L2label"     Grid.ColumnSpan="2" />
        <Label  Grid.Row="8" Grid.Column="13" x:Name="L3label"   Grid.ColumnSpan="3"  />
        <Label  Grid.Row="8" Grid.Column="18" x:Name="L4label"    />
        <Label x:Name="L5label"  Grid.Column="4"  Grid.Row="10"  Grid.ColumnSpan="3" />
        <Label x:Name="L6label"  Grid.Column="8"  Grid.Row="10"  />
        <Label x:Name="L7label"  Grid.Column="10"  Grid.Row="10" Grid.ColumnSpan="2"/>
        <Label x:Name="L8label"  Grid.Column="13" Grid.Row="10"  Grid.ColumnSpan="3" />
        <Label x:Name="L9label"  Grid.Column="18" Grid.Row="10"   Grid.ColumnSpan="2"/>
        <Label Grid.Column="2" Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="2"/>

        <Image x:Name="imageGerlMeseg" Grid.Column="14"  Grid.Row="6" Grid.ColumnSpan="5" />
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
    </Grid>
</UserControl>
