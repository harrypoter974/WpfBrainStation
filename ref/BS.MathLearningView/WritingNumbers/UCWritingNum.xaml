<UserControl x:Class="BS.MathLearningView.WritingNumbers.UCWritingNum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.WritingNumbers"
             mc:Ignorable="d" 
            d:DesignHeight="900" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="148*" />
            <RowDefinition Height="69*"/>
            <RowDefinition Height="39*" />
            <RowDefinition Height="16*" />
            <RowDefinition Height="39*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="67*" />
            <RowDefinition Height="129*"/>
            <RowDefinition Height="116*" />
            <RowDefinition Height="22*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="46*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="30*" />
            <RowDefinition Height="41*" />
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="27*" />
            <ColumnDefinition Width="22*" />
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="16*" />
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="24*" />
            <ColumnDefinition Width="34*" />
            <ColumnDefinition Width="19*" />
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="21*" />
            <ColumnDefinition Width="16*" />
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="21*" />
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>

        <Border  Name="BorderImage" Grid.Column="10" Grid.Row="6" Grid.ColumnSpan="18" Grid.RowSpan="10" >
            <Image   Name="imageBig" Stretch="Fill"  />
        </Border>

        <Slider Grid.Column="14"   Grid.Row="17" Name="slider1"  Minimum="0.1" Maximum="1"
                HorizontalContentAlignment="Center"  Value="0.5"  Orientation="Horizontal"
                VerticalContentAlignment="Center" Grid.ColumnSpan="11" Grid.RowSpan="5">
        </Slider>
        <Label Name="labelHome" Grid.RowSpan="4"/>
        <Label Content="" Grid.Column="30" Grid.Row="16"  Name="labelLast" />
        <Label Grid.Column="1"  Grid.Row="2" x:Name="uCSpeaker1" Grid.RowSpan="3" />
       <Image Name="imageLetterSize" Grid.Column="9" Grid.Row="19"  Grid.ColumnSpan="4"   Stretch="Fill"   />
        <Label Grid.Column="9" Grid.Row="18" Grid.ColumnSpan="2" Grid.RowSpan="2" Name="LSize1"  Foreground="White" Content="" FontSize="22" Background="Transparent"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"  />
        <Label Grid.Column="11" Grid.ColumnSpan="2" Grid.Row="19" Name="LSize2" Foreground="White" Content="" FontSize="16" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"    />




        <TextBlock x:Name="TBLetterTitle" Grid.Column="15" Grid.Row="1" Grid.RowSpan="3" Text="" FontWeight="Bold" Foreground="#FFFFD028" HorizontalAlignment="Center"
                   VerticalAlignment="Top" FontSize="28" Margin="10,0"  >
            <TextBlock.Effect>
                <DropShadowEffect  ShadowDepth="5"  Direction="330"
            Color="Black"   Opacity="0.4"  BlurRadius="5"/>
            </TextBlock.Effect>
        </TextBlock>
        <Label x:Name="LNum0"  ContentStringFormat="0" Grid.Column="9"  Grid.Row="23" Grid.ColumnSpan="2"/>
        <Label x:Name="LNum1"  ContentStringFormat="1" Grid.Column="12" Grid.Row="23" Grid.ColumnSpan="2"/>
        <Label x:Name="LNum2"  ContentStringFormat="2" Grid.Column="15" Grid.Row="23"/>
        <Label x:Name="LNum3"  ContentStringFormat="3" Grid.Column="17" Grid.Row="23"/>
        <Label x:Name="LNum4"  ContentStringFormat="4" Grid.Column="18" Grid.Row="23"/>
        <Label x:Name="LNum5"  ContentStringFormat="5" Grid.Column="20" Grid.Row="23"/>
        <Label x:Name="LNum6"  ContentStringFormat="6" Grid.Column="22" Grid.Row="23"/>
        <Label x:Name="LNum7"  ContentStringFormat="7" Grid.Column="23" Grid.Row="23"/>
        <Label x:Name="LNum8"  ContentStringFormat="8" Grid.ColumnSpan="2"  Grid.Column="24" Grid.Row="23"/>
        <Label x:Name="LNum9"  ContentStringFormat="9"  Grid.Column="28"  Grid.Row="23" />
        <Image x:Name="imageGerlMeseg" Grid.Column="34" Grid.Row="6" Stretch="Fill" />
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
        <Label x:Name="UCNewAnswerButton1" Grid.ColumnSpan="2" Grid.Column="27"  Grid.Row="18"  Grid.RowSpan="3" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundAnswerButton}"/>
            </Label.Background>
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AnswerBut}"/>
            </Label.InputBindings>
        </Label>

    </Grid>
</UserControl>
