<UserControl x:Class="BS.MathLearningView.Exercise.UCNumberStructureExercise"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Exercise"
             mc:Ignorable="d" 
                 d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="{Binding BackgroundPic}"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="470*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <!--<Items:UCSpeaker Grid.Column="2"  Grid.Row="1"/>-->
        <Label x:Name="labelHome"   Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuMathVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LToExercise"   Grid.Column="15" Grid.Row="5">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuMathVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LGrope1"    ContentStringFormat="1" Grid.Column="11"  Grid.Row="3"  Grid.ColumnSpan="4" Grid.RowSpan="2"  />
        <Label x:Name="LGrope10_"  ContentStringFormat="10" Grid.Column="15"  Grid.Row="3"  Grid.ColumnSpan="2" Grid.RowSpan="2" />
        <Label x:Name="LGrope10"   ContentStringFormat="10" Grid.Column="1"  Grid.Row="11"  Grid.ColumnSpan="3" />
        <Label x:Name="LGrope100"  ContentStringFormat="100" Grid.Column="1"  Grid.Row="12"  Grid.ColumnSpan="3" />
        <TextBlock x:Name="TBNum3" Grid.Column="9"  Grid.Row="8" VerticalAlignment="Center" Grid.RowSpan="7" Text="" TextAlignment="Right" Grid.ColumnSpan="3" />
        <TextBlock x:Name="TBNum2" Grid.Column="12" Grid.Row="8" VerticalAlignment="Center" Grid.RowSpan="7" Text="" TextAlignment="Right" Grid.ColumnSpan="3" />
        <TextBlock x:Name="TBNum1" Grid.Column="16" Grid.Row="8" VerticalAlignment="Center" Grid.RowSpan="7" Text="" TextAlignment="Right" Grid.ColumnSpan="2" />
        <Label  x:Name="UCNewAnswerButton1"  Grid.Column="5"  Grid.Row="12" Grid.RowSpan="3" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundAnswerButton}"/>
            </Label.Background>
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AnswerBut}"/>
            </Label.InputBindings>
        </Label>
        <TextBlock x:Name="TBRes0" Grid.Column="27" Grid.Row="9" Grid.RowSpan="4" Text="" FontSize="55" TextAlignment="Center" Foreground="Black"/>
        <TextBlock x:Name="TBRes1" Grid.Column="24" Grid.Row="9" Grid.RowSpan="4" Text="" FontSize="55" TextAlignment="Center" Foreground="Black" />
        <TextBlock x:Name="TBRes2" Grid.Column="22" Grid.Row="9" Grid.RowSpan="4" Text="" FontSize="55" TextAlignment="Center" Foreground="Black" />
        <TextBlock x:Name="TBRes3" Grid.Column="19" Grid.Row="9" Grid.RowSpan="4" Text="" FontSize="55" TextAlignment="Center" Foreground="Black" Grid.ColumnSpan="2"/>
        <Image x:Name="imageMessage" Grid.ColumnSpan="7" Grid.Column="19" Grid.Row="4" Grid.RowSpan="3" Stretch="Fill" />

    </Grid>
</UserControl>
