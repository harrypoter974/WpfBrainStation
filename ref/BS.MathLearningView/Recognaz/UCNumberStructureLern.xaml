<UserControl x:Class="BS.MathLearningView.Exercise.UCNumberStructureLern"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Exercise"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="{Binding BackgroundPic}"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="479*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="201*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="74*"/>
        </Grid.ColumnDefinitions>

        <!--<Items:UCSpeaker Grid.Column="2"  Grid.Row="1" />-->
        <Label x:Name="labelHome"   Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuMathVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LToExercise" Grid.Column="12" Grid.Row="6" Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuMathVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LName1"   ContentStringFormat="0" Grid.Column="5"  Grid.Row="10" Grid.RowSpan="3"/>
        <Label x:Name="LName2"   ContentStringFormat="1" Grid.Column="6"  Grid.Row="10" Grid.RowSpan="4" Grid.ColumnSpan="2" Margin="13,2,1,20"/>
        <Label x:Name="LName3"   ContentStringFormat="2" Grid.Column="9"  Grid.Row="10" Grid.RowSpan="3"/>
        <Label x:Name="LName4"   ContentStringFormat="3" Grid.Column="11" Grid.Row="10" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
        <Label x:Name="LGroup2_" ContentStringFormat="1" Grid.Column="14"  Grid.Row="3" Grid.RowSpan="2" />
        <Label x:Name="LGroup1"  ContentStringFormat="0" Grid.Column="12"  Grid.Row="3"  Grid.ColumnSpan="2" Grid.RowSpan="2" />
        <Label x:Name="LGroup2"  ContentStringFormat="1" Grid.Column="1"  Grid.Row="10" Grid.ColumnSpan="3" Grid.RowSpan="2" />
        <Label x:Name="LGroup3"  ContentStringFormat="2" Grid.Column="1"  Grid.Row="12" Grid.ColumnSpan="3" />
        <Label x:Name="LGroup4"  ContentStringFormat="3" Grid.Column="1"  Grid.Row="13"  Grid.ColumnSpan="3" />
        <Image x:Name="imageMessage" Grid.ColumnSpan="2" Grid.Column="17" Grid.Row="4" Grid.RowSpan="4" />

    </Grid>
</UserControl>
