            </Label.InputBindings>
        </Label>
        <Label x:Name="LToLern1"  Grid.Column="6" Grid.Row="7" Grid.RowSpan="3" Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathRecognaz10BVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel1"  Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="5" ContentStringFormat="1">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathExRecognaz1VM"/>
