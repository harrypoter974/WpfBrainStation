<UserControl x:Class="BS.MathLearningView.Exercise.UCMathRecognazOpen100C"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Exercise"
             mc:Ignorable="d" 
              d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MathLearningView;component/MathImage/UCMathRecognazOpen100C.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{Binding BackgroundPic}"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="72*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="38*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="627*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Image x:Name="imageGerlMeseg" Grid.Column="19"  Grid.Row="3"  Grid.RowSpan="4" Grid.ColumnSpan="4" Stretch="Fill"/>

        <!--<Items:UCSpeaker Grid.Column="2" Grid.Row="1"/>-->
        <Label x:Name="labelHome"     Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuMathVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LToExercise1"  Grid.Column="1"   Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathExRecognaz10VM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LToExercise2"  Grid.Column="1"  Grid.Row="6" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathArray2VM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel1"       Grid.Column="4"  Grid.Row="3"  Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathRecognaz100AVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel2"       Grid.Column="4"  Grid.Row="5"  Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathRecognaz100BVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LTo1" Grid.Column="14"  Grid.Row="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathRecognaz10AVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="Lnum10"  ContentStringFormat="10"  Grid.Column="2"  Grid.Row="9"  Grid.ColumnSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="10"  /></Label.InputBindings></Label>
        <Label x:Name="Lnum20"  ContentStringFormat="20"  Grid.Column="6"  Grid.Row="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="20"  /></Label.InputBindings></Label>
        <Label x:Name="Lnum30"  ContentStringFormat="30"  Grid.Column="8"  Grid.Row="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="30"  /></Label.InputBindings></Label>
        <Label x:Name="Lnum40"  ContentStringFormat="40"  Grid.Column="10" Grid.Row="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="40"  /></Label.InputBindings></Label>
        <Label x:Name="Lnum50"  ContentStringFormat="50"  Grid.Column="12" Grid.Row="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="50"  /></Label.InputBindings></Label>
        <Label x:Name="Lnum60"  ContentStringFormat="60"  Grid.Column="14" Grid.Row="9"  Grid.ColumnSpan="2"><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="60"  /></Label.InputBindings></Label>
        <Label x:Name="Lnum70"  ContentStringFormat="70"  Grid.Column="17" Grid.Row="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="70"  /></Label.InputBindings></Label>
        <Label x:Name="Lnum80"  ContentStringFormat="80"  Grid.Column="19" Grid.Row="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="80"  /></Label.InputBindings></Label>
        <Label x:Name="Lnum90"  ContentStringFormat="90"  Grid.Column="21" Grid.Row="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="90"  /></Label.InputBindings></Label>
        <Label x:Name="Lnum100" ContentStringFormat="100" Grid.Column="23" Grid.Row="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="100" /></Label.InputBindings></Label>
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>

    </Grid>
</UserControl>
