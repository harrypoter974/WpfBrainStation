<UserControl x:Class="BS.MathLearningView.Exercise.UCMathRecognazOpen100A"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Exercise"
             mc:Ignorable="d" 
              d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MathLearningView;component/MathImage/UCMathRecognazOpen100A.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="522*"/>
        </Grid.RowDefinitions>

        <!--<Items:UCSpeaker Grid.Column="2" Grid.Row="1"/>-->
        <Label x:Name="labelHome" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuMathVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel1"   Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathExRecognaz10VM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel2"   Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathArray2VM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LTo10"     Grid.Column="10" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathRecognaz10AVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LToLerning1" Grid.Column="4" Grid.Row="6" Grid.RowSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathRecognaz100BVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LT2oLerning2"  Grid.RowSpan="2" Grid.Column="4" Grid.Row="9" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathRecognaz100CVM"/>
            </Label.InputBindings>
        </Label>
        <Image x:Name="imageaGirlMeseg" Grid.Column="17"  Grid.Row="7" Grid.ColumnSpan="2" Grid.RowSpan="6" Stretch="Fill"/>

        <Label x:Name="Lnum10"  Grid.Column="5"   Grid.Row="6" Grid.RowSpan="9"                     >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="10"/></Label.InputBindings></Label>
        <Label x:Name="Lnum20"  Grid.Column="6"   Grid.Row="6" Grid.RowSpan="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="20"/></Label.InputBindings></Label>
        <Label x:Name="Lnum30"  Grid.Column="7"   Grid.Row="6" Grid.RowSpan="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="30"/></Label.InputBindings></Label>
        <Label x:Name="Lnum40"  Grid.Column="8"  Grid.Row="6"  Grid.RowSpan="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="40"/></Label.InputBindings></Label>
        <Label x:Name="Lnum50"  Grid.Column="9"  Grid.Row="6"  Grid.RowSpan="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="50"/></Label.InputBindings></Label>
        <Label x:Name="Lnum60"  Grid.Column="10"  Grid.Row="6" Grid.RowSpan="9"  Grid.ColumnSpan="3"><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="60"/></Label.InputBindings></Label>
        <Label x:Name="Lnum70"  Grid.Column="13"  Grid.Row="6" Grid.RowSpan="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="70"/></Label.InputBindings></Label>
        <Label x:Name="Lnum80"  Grid.Column="14"  Grid.Row="6" Grid.RowSpan="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="80"/></Label.InputBindings></Label>
        <Label x:Name="Lnum90"  Grid.Column="15"  Grid.Row="6" Grid.RowSpan="9"                     ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="90"/></Label.InputBindings></Label>
        <Label x:Name="Lnum100"  Grid.Column="16" Grid.Row="6" Grid.RowSpan="9" ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayNum}" CommandParameter="100"/></Label.InputBindings></Label>
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
    </Grid>
</UserControl>
