<UserControl x:Class="BS.MathLearningView.Splite.UCMathSplit1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Splite"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MathLearningView;component/MathImage/UCMathSplit2.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*" />
            <RowDefinition Height="5*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="34*" />
            <RowDefinition Height="125*" />
            <RowDefinition Height="104*" />
            <RowDefinition Height="48*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="31*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="34*" />
            <RowDefinition Height="36*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="112*"/>
            <RowDefinition Height="16*" />
            <RowDefinition Height="49*" />
            <RowDefinition Height="33*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*" />
            <ColumnDefinition Width="22*" />
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="261*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="106*" />
            <ColumnDefinition Width="178*" />
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="16*" />
        </Grid.ColumnDefinitions>
        <Image x:Name="imageNumAnswer"  Grid.ColumnSpan="13" Grid.Column="12" Grid.Row="9"  Grid.RowSpan="3" />

      
        <Button Content="" Grid.Column="17" Grid.Row="7" Background="Transparent" Name="buttonNext"  Visibility="Hidden" Grid.ColumnSpan="4"/>
        <Label  Name="buttonMenu"  Grid.RowSpan="3" />
        <Label Grid.Column="1" Grid.Row="2" x:Name="uCSpeaker1"  />
       <TextBlock x:Name="TBNum1" Grid.Column="14" TextAlignment="Center" Grid.Row="10"  Text="" VerticalAlignment="Center" Grid.ColumnSpan="4"/>
        <TextBlock x:Name="TBNum0" Grid.Column="20" TextAlignment="Center" Grid.Row="10"  Text="" VerticalAlignment="Center" Grid.ColumnSpan="3"/>
        <Label x:Name="TBLevel5"  Grid.Column="6"  Grid.Row="4"/>
        <Label x:Name="TBLevel4"  Grid.Column="7"  Grid.Row="4"/>
        <Label x:Name="TBLevel3"  Grid.Column="8"  Grid.Row="4"/>
        <Label x:Name="TBLevel2"  Grid.Column="9"  Grid.Row="4"/>
        <Label x:Name="LNum0" ContentStringFormat="0" Grid.ColumnSpan="4" Grid.Column="17" Grid.Row="13"/>
        <Label x:Name="LNum1" ContentStringFormat="1" Grid.ColumnSpan="4" Grid.Column="17" Grid.Row="14"/>
        <Label x:Name="LNum2" ContentStringFormat="2" Grid.ColumnSpan="4" Grid.Column="17" Grid.Row="15"/>
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
        <Label x:Name="label" Grid.Column="16"  Grid.Row="18"  Grid.ColumnSpan="3" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundAnswerButton}"/>
            </Label.Background>
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AnswerBut}"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
