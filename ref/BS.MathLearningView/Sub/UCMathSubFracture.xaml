<UserControl x:Class="BS.MathLearningView.Sub.UCMathSubFracture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Sub"
             mc:Ignorable="d" 
                        d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MathLearningView;component/MathImage/UCMathSubFracture.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="327*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="3"  Grid.Row="2" Grid.ColumnSpan="2" />
       <Label x:Name="labelHome"  Grid.RowSpan="3" Grid.ColumnSpan="2"/>
      <TextBlock x:Name="TBNumMone"   Grid.Column="17" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="14" Grid.RowSpan="2" Text="" VerticalAlignment="Center" FontSize="50" />
        <TextBlock x:Name="TBNumMachne" Grid.Column="17" Grid.ColumnSpan="2"  HorizontalAlignment="Center" Grid.Row="17" Text="" VerticalAlignment="Center" FontSize="50"  Grid.RowSpan="2"/>
        <TextBlock x:Name="TBNum"       Grid.Column="15"  HorizontalAlignment="Center" Grid.Row="16" Text="" VerticalAlignment="Center" FontSize="50" />
        <Label x:Name="TBLevel3"  Grid.Column="10" Grid.Row="4"/>
        <Label x:Name="TBLevel2"  Grid.Column="11" Grid.Row="4"/>
        <Label x:Name="TBLevel1"  Grid.Column="12" Grid.Row="4"/>
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
        <Label  Grid.Column="17" Grid.ColumnSpan="3" Grid.Row="23" x:Name="UCNewAnswerButton1" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundAnswerButton}"/>
            </Label.Background>
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AnswerBut}"/>
            </Label.InputBindings>
        </Label>

    </Grid>
</UserControl>
