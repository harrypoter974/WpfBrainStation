<Window x:Class="WpfBrainStation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBrainStation"
        mc:Ignorable="d"
        Title="MainWindow"  Height="900" Width="1000"  WindowState="Maximized" 
    WindowStyle="None"   ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="BaseImages/WinOpen.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="443*"/>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="445*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="790*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelNext" Grid.Column="1" MouseDown="labelNext_MouseDown" Grid.Row="1"/>

    </Grid>
</Window>
