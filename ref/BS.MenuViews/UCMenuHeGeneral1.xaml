<UserControl x:Class="BS.MenuViews.UCMenuHeGeneral1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
            d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuHeGeneral.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="31*" />
            <RowDefinition Height="26*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="38*" />
            <RowDefinition Height="119*"/>
            <RowDefinition Height="65*" />
            <RowDefinition Height="43*" />
            <RowDefinition Height="58*" />
            <RowDefinition Height="164*" />
            <RowDefinition Height="79*" />
            <RowDefinition Height="64*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44*" />
            <ColumnDefinition Width="196*" />
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="189*"/>
            <ColumnDefinition Width="64*" />
            <ColumnDefinition Width="256*"/>
        </Grid.ColumnDefinitions>
        <Label  Name="labelHome" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"  CommandParameter="MenuLernVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="11" Grid.Row="7" Grid.RowSpan="5"  Name="labelColor"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="ColorsMenuVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="9" Grid.Row="7" Grid.RowSpan="5"  Name="labelClock">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="ClockMenuVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="6" Name="labelOrientation">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter=""/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="8" Grid.Row="7" Name="labelConcepts" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter=""/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelAnimals" Grid.Column="1" Grid.Row="7"    Grid.RowSpan="5">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="AnimalsLernVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelHelp"  Grid.Column="3" Grid.Row="4" >
        </Label>
        <Label x:Name="labelGame"  Grid.Column="2" Grid.Row="12"  Grid.ColumnSpan="9" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHeGeneralGameVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelCloseHelp" Grid.Column="6" Grid.Row="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
