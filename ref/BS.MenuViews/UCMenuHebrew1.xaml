<UserControl x:Class="BS.MenuViews.UCMenuHebrew1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuHebrew.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*" />
            <RowDefinition Height="34*" />
            <RowDefinition Height="30*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="110*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="110*" />
            <RowDefinition Height="24*" />
            <RowDefinition Height="111*" />
            <RowDefinition Height="19*" />
            <RowDefinition Height="109*" />
            <RowDefinition Height="27*" />
            <RowDefinition Height="108*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*" />
            <ColumnDefinition Width="182*" />
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="334*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="33*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="2" Grid.Row="6" Name="labelKnowLeters"   Grid.ColumnSpan="7"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="KnowLetterMenuVM"/>
            </Label.InputBindings>
        </Label>
        <Label Grid.Column="2" Grid.Row="8"  Name="labelWriteLeters"  Grid.ColumnSpan="7">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter=""/>
            </Label.InputBindings>
        </Label>
        <Label Grid.Column="2" Grid.Row="10"  Name="labelWriteWorde" Grid.ColumnSpan="7" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHeReadingVM"/>
            </Label.InputBindings>
        </Label>

        <Label Grid.Column="2" Grid.Row="12"  Name="labelWriteFillSentens"    Grid.ColumnSpan="7">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter=""/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelGame" Grid.Column="2" Grid.Row="14"  Grid.ColumnSpan="7" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHeGameVM"/>
            </Label.InputBindings>
        </Label>
 

        <Label x:Name="labelCloseHelp"  Grid.Column="5" Grid.ColumnSpan="2"  Grid.Row="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ToBoyName}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHalp"  Grid.Column="3"  Grid.Row="4" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding ToBoyName}"/>
            </Label.InputBindings>
        </Label>
       <Label  Name="labelHome"  Height="53" VerticalAlignment="Top">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"  CommandParameter="MenuLernVM"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
