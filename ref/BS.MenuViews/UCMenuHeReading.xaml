<UserControl x:Class="BS.MenuViews.UCMenuHeReading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
           d:DesignHeight="900" d:DesignWidth="1000"   >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuEnReading.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="707*"/>
            <ColumnDefinition Width="124*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="223*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelHome"         >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHebrewVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelBPrepositions"   Grid.Column="2"  Grid.Row="3"  Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnTextPrepositionsVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelMemoryColor"  Grid.Column="2"  Grid.Row="7"  Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnLettersKnowVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelBingoClock"   Grid.Column="2"  Grid.Row="11" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnLettersKnowVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelMemoryAnimals" Grid.Column="2"  Grid.Row="15" Grid.ColumnSpan="3"  Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnLettersKnowVM"/>
            </Label.InputBindings>
        </Label>

        <Label x:Name="labelHelpBingoColor"    Grid.Column="3"  Grid.Row="5" />
        <Label x:Name="labelHelpMemoryColor"   Grid.Column="3"  Grid.Row="9" />
        <Label x:Name="labelHelpBingoClock"    Grid.Column="3"  Grid.Row="13" />
        <Label x:Name="labelHelpBingoAnimals"  Grid.Column="3"  Grid.Row="17" />
        <Label x:Name="labelHelpMemoryAnimals" Grid.Column="3"  Grid.Row="21" Margin="0,0,0,18" Grid.RowSpan="2" />
        <Label x:Name="labelCloseHelp" Grid.Column="5"  Grid.Row="2" Margin="0,0,124,208" Grid.RowSpan="3" Grid.ColumnSpan="3" />

    </Grid>
</UserControl>
