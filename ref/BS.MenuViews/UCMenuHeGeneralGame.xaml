<UserControl x:Class="BS.MenuViews.UCMenuHeGeneralGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
                  d:DesignHeight="900" d:DesignWidth="1000"   >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuHeGeneralGame.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="556*"/>
            <ColumnDefinition Width="95*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="158*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelHome">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHeGeneralVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelBingoColor"    Grid.Column="2"  Grid.Row="4"  Grid.ColumnSpan="5" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelMemoryColor"   Grid.Column="2"  Grid.Row="8"  Grid.ColumnSpan="5" Grid.RowSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GpTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelBingoClock"    Grid.Column="2"  Grid.Row="12" Grid.ColumnSpan="5" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="ClockBingoAnalogVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelBingoAnimals"  Grid.Column="2"  Grid.Row="16" Grid.ColumnSpan="5" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelMemoryAnimals" Grid.Column="2"  Grid.Row="20" Grid.ColumnSpan="5" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>

        <Label x:Name="labelHelpBingoColor"     Grid.Column="3"  Grid.Row="5" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelHelpMemoryColor"    Grid.Column="3"  Grid.Row="9" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelHelpBingoClock"     Grid.Column="3"  Grid.Row="13" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelHelpBingoAnimals"   Grid.Column="3"  Grid.Row="17" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelHelpMemoryAnimals"  Grid.Column="3"  Grid.Row="21" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelCloseHelp"  Grid.Column="5"  Grid.Row="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>

    </Grid>
</UserControl>
