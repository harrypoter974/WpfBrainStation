<UserControl x:Class="BS.MenuViews.UCMenuLern1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
              d:DesignHeight="900" d:DesignWidth="1000"   >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuLern.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*" />
            <RowDefinition Height="279*"/>
            <RowDefinition Height="118*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="120*" />
            <RowDefinition Height="250*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*" />
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="189*" />
            <ColumnDefinition Width="47*" />
            <ColumnDefinition Width="192*" />
            <ColumnDefinition Width="44*" />
            <ColumnDefinition Width="184*" />
            <ColumnDefinition Width="48*" />
            <ColumnDefinition Width="193*" />
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <Label Content="" Name="labelHome"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuOpenVM"/>
            </Label.InputBindings>
        </Label>
        <Label Content="" Grid.Row="4" Grid.Column="2" Name="labelGeneric" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHeGeneralVM"/>
            </Label.InputBindings>
        </Label>
        <Label Content="" Grid.Column="2" Grid.Row="2"  Name="labelShap"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuShapeVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.Row="2"  Name="labelMath">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuMathVM"/>
            </Label.InputBindings>
        </Label>
        <Label Grid.Column="6" Grid.Row="2" Name="labelEn">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnglishVM"/>
            </Label.InputBindings>
        </Label>
        <Label Content="" Grid.Column="8" Grid.Row="2"  Name="labelHe">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuHebrewVM"/>
            </Label.InputBindings>
        </Label>

        <Label x:Name="labelPrint"   Grid.Column="4" Grid.Row="4">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuPrintVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelMoney" Grid.Column="6" Grid.Row="4"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuMoneyVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelGeography" Grid.Column="8" Grid.Row="4">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuGeographyVM"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
