        <Label  Name="labelHome">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"  CommandParameter="MenuLernVM"/>
            </Label.InputBindings>
        </Label>

        <Label Content=""  Grid.Column="11" Grid.ColumnSpan="4"  Grid.Row="9" Grid.RowSpan="3" Name="labelRecognase" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathRecognaz10AVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelArreyMum" Grid.Column="11" Grid.Row="17"  Grid.ColumnSpan="4" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathAddVM"/>
            </Label.InputBindings>
        </Label>
        <Label   Grid.ColumnSpan="9"  Grid.Column="1" Grid.Row="9" Name="labelCoper"   Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathComperVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="11"  Grid.ColumnSpan="4"  Grid.Row="13" Name="labelWrate" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="WritingNumbersOpenVM"/>
            </Label.InputBindings>
        </Label>

        <Label Grid.Column="1" Grid.Row="17" Name="labelComplex" Grid.ColumnSpan="9" Grid.RowSpan="3"            >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathAddVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="4" Grid.ColumnSpan="11" Grid.Row="21"   Name="labelGame" Margin="0,0,229,0" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuMathGameVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="label4Arithmetic"  Grid.Column="1"  Grid.Row="13" Grid.ColumnSpan="9"  Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="Menu4ArithmeticVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LCloseHalp" Grid.Column="7" Grid.Row="2"  Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathAddVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHelp" Grid.Column="4"  Grid.Row="5" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MathAddVM"/>
            </Label.InputBindings>
        </Label>

    </Grid>
