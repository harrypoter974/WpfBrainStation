<UserControl x:Class="BS.MenuViews.UCMenuEnGeneral"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
                      d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuEnGeneral.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="94*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="96*"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="192*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="325*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="126*"/>
            <RowDefinition Height="162*"/>
            <RowDefinition Height="115*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelHome"      >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnglishVM"/>
            </Label.InputBindings>            
        </Label>
        <Label x:Name="labelColor"     Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="2"   >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnColorMenuVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelFamily"    Grid.Column="8" Grid.Row="2"   >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnFamilyVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelAnimals"    Grid.Column="3" Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="2"   >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnAnimalsVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelOpposites"  Grid.Column="2" Grid.Row="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnOppositesLernVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelCalendar"  Grid.Column="5" Grid.Row="5" Grid.RowSpan="2"    >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnCalendarVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelDaysOfTheWeek" Grid.Column="6" Grid.Row="5" Grid.RowSpan="2"    >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnDaysOfTheWeekVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelNumbers"        Grid.Column="7" Grid.Row="5" Grid.RowSpan="2"   >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnNumbersVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelClock"         Grid.Column="8" Grid.Row="4" Grid.RowSpan="2"   >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnClockVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelPrepositions"  Grid.Column="1" Grid.Row="2"    >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnPrepositionsLernVM"/>
            </Label.InputBindings>
        </Label>

    </Grid>
</UserControl>
