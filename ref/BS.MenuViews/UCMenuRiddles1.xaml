<UserControl x:Class="BS.MenuViews.UCMenuRiddles1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuRiddles.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="222*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="219*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="425*"/>
            <RowDefinition Height="129*"/>
            <RowDefinition Height="393*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelHome" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuOpenVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelMatch" Grid.Column="2" Grid.Row="2"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelLogic" Grid.Column="4" Grid.Row="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelPuzzle" Grid.Column="6" Grid.Row="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
