<UserControl x:Class="BS.MenuViews.UCMenuEnglish1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
       d:DesignHeight="900" d:DesignWidth="1000"   >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuEnglish.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*" />
            <RowDefinition Height="32*" />
            <RowDefinition Height="28*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="90*" />
            <RowDefinition Height="9*" />
            <RowDefinition Height="89*" />
            <RowDefinition Height="12*"/>
            <RowDefinition Height="90*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="90*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="90*"/>
            <RowDefinition Height="7*" />
            <RowDefinition Height="94*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*" />
            <ColumnDefinition Width="148*" />
            <ColumnDefinition Width="13*" />
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="470*"/>
            <ColumnDefinition Width="134*" />
            <ColumnDefinition Width="46*" />
        </Grid.ColumnDefinitions>
        <Label    Name="labelHome"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"  CommandParameter="MenuLernVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLetterKnow"  Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="5">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnLettersKnowVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="8"  Name="LWritingLetters" Grid.ColumnSpan="5" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnWritingLettersMenuVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="14"  Name="LWords"  Grid.ColumnSpan="5"   >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnWordsVM"/>
            </Label.InputBindings>
        </Label>
        <Label  Grid.Column="2" Grid.Row="10"  Name="LSentences"  Grid.ColumnSpan="5" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnGeneralVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelGame" Grid.Column="2" Grid.Row="16"  Grid.ColumnSpan="5">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnGameVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelHelp" Grid.Column="3"  Grid.Row="3"  Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter=""/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelClose" Grid.Column="5" Grid.Row="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter=""/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelSyllable"  Grid.Column="2" Grid.Row="12"  Grid.ColumnSpan="5" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnPronunciationVM"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
