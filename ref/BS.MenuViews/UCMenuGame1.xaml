<UserControl x:Class="BS.MenuViews.UCMenuGame1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuGame.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="132*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="108*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="95*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="302*"/>
            <RowDefinition Height="118*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="191*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelHome"  >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"  CommandParameter="MenuOpenVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LPuzzles"  Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuPuzzlesVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="lTrivia"  Grid.Column="5" Grid.Row="2" Grid.ColumnSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="lMemory"  Grid.ColumnSpan="2" Grid.Column="9" Grid.Row="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="lKoordinatsia"  Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="lBordGame"  Grid.Column="7" Grid.Row="4" Grid.ColumnSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
