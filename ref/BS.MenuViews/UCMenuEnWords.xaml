<UserControl x:Class="BS.MenuViews.UCMenuEnWords"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuEnWords.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="761*"/>
            <ColumnDefinition Width="122*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="233*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="237*"/>
            <RowDefinition Height="98*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="66*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelHome" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnglishVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelWord"  Grid.Column="2" Grid.Row="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnWords"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="TBText" Grid.Column="2"   Grid.Row="4"    >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="WritingEnMenuVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="TBWrite" Grid.Column="2"   Grid.Row="6" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter=""/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
