<UserControl x:Class="BS.MenuViews.UCMenuGeography"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MenuViews"
             mc:Ignorable="d" 
         d:DesignHeight="900" d:DesignWidth="1000"  >
    <UserControl.Background>
        <ImageBrush ImageSource="MenuImage/UCMenuGeography.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="72*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="379*"/>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="136*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelHome" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"  CommandParameter="MenuLernVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LMapIsrael" Grid.Column="2" Grid.Row="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LMapErth" Grid.Column="2" Grid.Row="4" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LMapScoole"  Grid.Column="2" Grid.Row="6">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"/>
            </Label.InputBindings>
        </Label>
    </Grid>
</UserControl>
