<UserControl x:Class="BS.EnglishViews.Text.UCEnTextOpposites"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.EnglishViews.Text"
             mc:Ignorable="d" 
            d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.EnglishViews;component/EnglishImage/UCEnTextOpposites.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="36*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="193*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="127*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="127*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="126*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>

        <Slider x:Name="slider1" Grid.Column="1" Grid.Row="17" Grid.RowSpan="2" Grid.ColumnSpan="5" Minimum="0" 
          Value="2000" Maximum="4000" SmallChange="1"/>

        <Label x:Name="labelHome"       Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnReadingVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="labelPrepositions" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3"/>
        <Label x:Name="labelText" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3"/>

        <Label x:Name="labelSentens0"  Grid.Column="2"  Grid.Row="9"  Grid.ColumnSpan="2" />
        <Label x:Name="labelSentens1"  Grid.Column="4"  Grid.Row="9" />
        <Label x:Name="labelSentens2"  Grid.Column="5"  Grid.Row="9" />
        <Label x:Name="labelSentens3"  Grid.Column="7"  Grid.Row="9"  Grid.ColumnSpan="3" />
        <Label x:Name="labelSentens4"  Grid.Column="11" Grid.Row="9" />
        <Label x:Name="labelSentens5"  Grid.Column="12" Grid.Row="9" />
        <Label x:Name="labelSentens6"  Grid.Column="14" Grid.Row="9" />
        <Label x:Name="labelSentens7"  Grid.Column="15" Grid.Row="9" />
        <Label x:Name="labelSentens8"  Grid.Column="17" Grid.Row="9" />
        <Label x:Name="labelSentens9"  Grid.Column="18" Grid.Row="9"  />
        <Label x:Name="labelSentens10"  Grid.Column="20" Grid.Row="9" />
        <Label x:Name="labelSentens11"  Grid.Column="21" Grid.Row="9" />
        <WrapPanel Grid.Column="2" Grid.Row="11" Grid.ColumnSpan="20" x:Name="WrapPanel0" HorizontalAlignment="Left" Margin="0,4" />
        <WrapPanel Grid.Column="2" Grid.Row="13" Grid.ColumnSpan="20" x:Name="WrapPanel1" HorizontalAlignment="Left" Margin="0,4" />
        <WrapPanel Grid.Column="2" Grid.Row="15" Grid.ColumnSpan="20" x:Name="WrapPanel2" HorizontalAlignment="Left" Margin="0,4" />
        <Image x:Name="imageLevel" Grid.Column="4" Grid.Row="3" Grid.RowSpan="4" />

        <Label x:Name="LLevel1" Grid.Column="4" Grid.Row="3" />
        <Label x:Name="LLevel2" Grid.Column="4" Grid.Row="4" />
        <Label x:Name="LLevel3" Grid.Column="4" Grid.Row="5" />
        <Label x:Name="LAnswerButton" Grid.Column="8"  Grid.Row="18">
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundAnswerButton}"/>
            </Label.Background>
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AnswerBut}"/>
            </Label.InputBindings>
        </Label>


    </Grid>
</UserControl>
