<UserControl x:Class="BS.EnglishViews.Text.UCEnTextSmall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.EnglishViews.Text"
             mc:Ignorable="d"    
             d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.EnglishViews;component/EnglishImage/UCEnTextSmall.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="124*"/>
            <ColumnDefinition Width="96*"/>
            <ColumnDefinition Width="299*"/>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="32*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="128*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="132*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="132*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <WrapPanel  x:Name="WrapPanel0" Grid.Column="2" Grid.Row="3" Uid="0"  Grid.ColumnSpan="8" HorizontalAlignment="Left" Margin="9,2,0,2"/>
        <WrapPanel  x:Name="WrapPanel1" Grid.Column="2" Grid.Row="5"  Uid="1" Grid.ColumnSpan="8" HorizontalAlignment="Left" Margin="9,2,0,2"/>
        <WrapPanel  x:Name="WrapPanel2" Grid.Column="2" Grid.Row="7"  Uid="2" Grid.ColumnSpan="8" HorizontalAlignment="Left" Margin="9,2,0,2"/>
        <WrapPanel  x:Name="WrapPanel3" Grid.Column="2" Grid.Row="9"  Uid="3" Grid.ColumnSpan="8" HorizontalAlignment="Left" Margin="9,2,0,2"/>
        <WrapPanel  x:Name="WrapPanel4" Grid.Column="2" Grid.Row="11" Uid="4" Grid.ColumnSpan="8" HorizontalAlignment="Left" Margin="9,2,0,2"/>
        <WrapPanel  x:Name="WrapPanel5" Grid.Column="2" Grid.Row="13" Uid="5" Grid.ColumnSpan="8" HorizontalAlignment="Left" Margin="9,2,0,2"/>
        <Label x:Name="LPanel0" Grid.Column="1"  Grid.Row="2"  Grid.ColumnSpan="9" Grid.RowSpan="2"  />
        <Label x:Name="LPanel1" Grid.Column="1" Grid.Row="5"   Grid.ColumnSpan="9"  />
        <Label x:Name="LPanel2" Grid.Column="1" Grid.Row="7"   Grid.ColumnSpan="9"  />
        <Label x:Name="LPanel3" Grid.Column="1" Grid.Row="9"   Grid.ColumnSpan="9"  />
        <Label x:Name="LPanel4" Grid.Column="1" Grid.Row="11"  Grid.ColumnSpan="9"  />
        <Label x:Name="LPanel5" Grid.Column="1" Grid.Row="13"  Grid.ColumnSpan="9"  />
        <Label  x:Name="labelHome" Grid.RowSpan="2" Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnReadingVM"/>
            </Label.InputBindings>
        </Label>
       <Slider x:Name="slider1" Grid.Column="1"  Grid.Row="15" Grid.RowSpan="3" Minimum="0" Grid.ColumnSpan="4"
          Value="2000" Maximum="4000" SmallChange="1" />
        <Label x:Name="labelOpen" Grid.Column="7"  Grid.Row="15" Grid.RowSpan="2"/>
        <Label x:Name="labelWrite" Grid.Column="9" Grid.Row="16"                 />
        <Label x:Name="LAnswerButton" Grid.Column="5"  Grid.Row="16"  Grid.RowSpan="2">
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundAnswerButton}"/>
            </Label.Background>
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding AnswerBut}"/>
            </Label.InputBindings>
        </Label>

    </Grid>
</UserControl>
