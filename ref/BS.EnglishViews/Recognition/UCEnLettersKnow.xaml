<UserControl x:Class="BS.EnglishViews.Recognition.UCEnLettersKnow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.EnglishViews.Recognition"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.EnglishViews;component/EnglishImage/UCEnLettersKnow.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="135*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="145*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelHome"   Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnglishVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel0" Grid.ColumnSpan="3" Grid.Row="5" Grid.RowSpan="2"                     >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnKnowLetterVM"/>
            </Label.InputBindings>
        </Label>

        <Label x:Name="LLevel1" Grid.Row="3" Grid.Column="3"                >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}"  CommandParameter="EnLetterRecognition1VM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel2" Grid.Row="4" Grid.Column="3" Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnLetterRecognition2VM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel3" Grid.Row="6" Grid.RowSpan="2" Grid.Column="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="EnLetterRecognition3VM"/>
            </Label.InputBindings>
        </Label>

        <Label x:Name="labeA"  Grid.Column="3"  Grid.Row="9" Grid.ColumnSpan="2"  ><Label.InputBindings><MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="a"/> </Label.InputBindings> </Label>
        <Label x:Name="labeB" Grid.Column="6"   Grid.Row="9"                      ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="b"/> </Label.InputBindings> </Label>
        <Label x:Name="labeC" Grid.Column="8"   Grid.Row="9"                      ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="c"/> </Label.InputBindings> </Label>
        <Label x:Name="labeD" Grid.Column="10"   Grid.Row="9"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="d"/> </Label.InputBindings> </Label>
        <Label x:Name="labeE" Grid.Column="12"  Grid.Row="9"                      ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="e"/> </Label.InputBindings> </Label>
        <Label x:Name="labeF" Grid.Column="15"  Grid.Row="9"                      ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="f"/> </Label.InputBindings> </Label>
        <Label x:Name="labeG" Grid.Column="17"  Grid.Row="9"  Grid.ColumnSpan="2" ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="g"/> </Label.InputBindings> </Label>
        <Label x:Name="labeH" Grid.Column="3"  Grid.Row="11"  Grid.ColumnSpan="2" ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="h"/> </Label.InputBindings> </Label>
        <Label x:Name="labeI" Grid.Column="6"   Grid.Row="11"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="i"/> </Label.InputBindings> </Label>
        <Label x:Name="labeJ" Grid.Column="8"   Grid.Row="11"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="j"/> </Label.InputBindings> </Label>
        <Label x:Name="labeK" Grid.Column="10"  Grid.Row="11"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="k"/> </Label.InputBindings> </Label>
        <Label x:Name="labeL" Grid.Column="12"  Grid.Row="11"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="l"/> </Label.InputBindings> </Label>
        <Label x:Name="labeM" Grid.Column="13"  Grid.Row="11" Grid.ColumnSpan="3" ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="m"/> </Label.InputBindings> </Label>
        <Label x:Name="labeN" Grid.Column="17"  Grid.Row="11" Grid.ColumnSpan="2" ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="n"/> </Label.InputBindings> </Label>
        <Label x:Name="labeO" Grid.Column="2"  Grid.Row="13" Grid.ColumnSpan="3"  ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="o"/> </Label.InputBindings> </Label>
        <Label x:Name="labeP" Grid.Column="6"   Grid.Row="13"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="p"/> </Label.InputBindings> </Label>
        <Label x:Name="labeQ" Grid.Column="8"   Grid.Row="13"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="q"/> </Label.InputBindings> </Label>
        <Label x:Name="labeR" Grid.Column="10"  Grid.Row="13"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="r"/> </Label.InputBindings> </Label>
        <Label x:Name="labeS" Grid.Column="12"  Grid.Row="13"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="s"/> </Label.InputBindings> </Label>
        <Label x:Name="labeT" Grid.Column="15"  Grid.Row="13"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="t"/> </Label.InputBindings> </Label>
        <Label x:Name="labeU" Grid.Column="17"  Grid.Row="13" Grid.ColumnSpan="2" ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="u"/> </Label.InputBindings> </Label>
        <Label x:Name="labeV" Grid.Column="6"   Grid.Row="15"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="v"/> </Label.InputBindings> </Label>
        <Label x:Name="labeW" Grid.Column="7"   Grid.Row="15"  Grid.ColumnSpan="3"><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="w"/> </Label.InputBindings> </Label>
        <Label x:Name="labeX" Grid.Column="10"  Grid.Row="15"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="x"/> </Label.InputBindings> </Label>
        <Label x:Name="labeY" Grid.Column="12"  Grid.Row="15"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="y"/> </Label.InputBindings> </Label>
        <Label x:Name="labeZ" Grid.Column="15"  Grid.Row="15"                     ><Label.InputBindings> <MouseBinding MouseAction="LeftClick"  Command="{Binding PlayLetter}" CommandParameter="z"/> </Label.InputBindings> </Label>
        <Image x:Name="imageMessage" Grid.ColumnSpan="4" Grid.Column="14"  Grid.Row="3"  Stretch="Fill" Grid.RowSpan="5" />
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
    </Grid>
</UserControl>
