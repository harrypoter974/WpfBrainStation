<UserControl x:Class="BS.EnglishViews.Notions.UCEnClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.EnglishViews.Notions"
             mc:Ignorable="d"  d:DesignHeight="900" d:DesignWidth="1000"
               FontSize="60" FontFamily="Times New Roman"  FontWeight="Bold"  >
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.EnglishViews;component/EnglishImage/UCEnClock.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="343*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="32*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="196*"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="144*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>

        <Label x:Name="labelHome" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoTo1}" CommandParameter="MenuEnGeneralVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour1"  Grid.Column="9"  Grid.Row="11" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding SetHour}" CommandParameter="1"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour2"  Grid.Column="11" Grid.Row="11" Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="2" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour3"  Grid.Column="14" Grid.Row="11" Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="3" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour4"  Grid.Column="17" Grid.Row="11" Grid.ColumnSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="4" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour5"  Grid.Column="21" Grid.Row="11" Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="5" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour6"  Grid.Column="24" Grid.Row="11" Grid.ColumnSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="6" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour7"  Grid.Column="28" Grid.Row="11" Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="7" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour8"  Grid.Column="31" Grid.Row="11" Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="8" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour9"  Grid.Column="34" Grid.Row="11" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="9" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour10" Grid.Column="36" Grid.Row="11"  Grid.ColumnSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="10" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour11" Grid.Column="40" Grid.Row="11" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="11" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LHour12" Grid.Column="42" Grid.Row="11"  Grid.ColumnSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  CommandParameter="12" Command="{Binding SetHour}"/>
            </Label.InputBindings>
        </Label>
        <TextBlock x:Name="TBHour2" Grid.Column="15"  Grid.Row="17" Text="{Binding HourText1}" VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.ColumnSpan="6"   />
        <TextBlock x:Name="TBHour1" Grid.Column="24" Grid.Row="17" Text="{Binding HourText0}" Grid.ColumnSpan="5"   VerticalAlignment="Center"  HorizontalAlignment="Center"  />
        <TextBlock x:Name="TBMinute2" Grid.Column="34" Grid.Row="17" Text="0" Grid.ColumnSpan="3" VerticalAlignment="Center"  HorizontalAlignment="Center" />
        <TextBlock x:Name="TBMinute1" Grid.Column="40" Grid.Row="17" Text="0" Grid.ColumnSpan="3" VerticalAlignment="Center"  HorizontalAlignment="Center" />
        <Border  Grid.Column="5"  Grid.Row="9" Grid.RowSpan="10" Grid.ColumnSpan="2" >
            <Image x:Name="imageHour"  HorizontalAlignment="Center"   VerticalAlignment="Center" 
               Width="64" RenderTransformOrigin="0.5,0.5" Source="/BS.EnglishViews;component/EnglishImage/mahog shaot.png" Stretch="Uniform"   >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="{Binding  Hour}"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Border>
        <Border Grid.Column="5"  Grid.Row="9" Grid.RowSpan="10" Grid.ColumnSpan="2"  >
            <Image x:Name="imageMinute"  HorizontalAlignment="Center"  Height="680" VerticalAlignment="Center"
               Width="50" RenderTransformOrigin="0.5,0.5" Source="/BS.EnglishViews;component/EnglishImage/mahog dakot.png" Stretch="Uniform" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.00"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Border>
        <Rectangle x:Name="Rectangle1" Grid.ColumnSpan="36" Grid.Column="9" Fill="#FF41AD48"  Grid.Row="13"  Grid.RowSpan="3"
             Visibility="Collapsed"      />

        <Label Grid.Column="2"  Grid.Row="1" />
        <Image x:Name="imageMessegGerl" Grid.Column="15" Grid.Row="5" Grid.RowSpan="5" Grid.ColumnSpan="29"  Stretch="Fill"  />
        <MediaElement   Source="{Binding Url}" Visibility="Collapsed"  LoadedBehavior="Play"/>
    </Grid>
</UserControl>
