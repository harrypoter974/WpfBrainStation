                <ImageBrush ImageSource="{Binding PlayAllNumBut}"/>
            </Label.Background>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding PlayAllNum}" />
