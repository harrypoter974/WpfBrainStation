        <Grid.Background>
            <ImageBrush ImageSource="{Binding BackgroundPic}"/>
        </Grid.Background>
        <Image x:Name="imageGerlMeseg" Grid.Column="19"  Grid.Row="3"
                Source="{Binding messagePic}" Grid.RowSpan="3" Grid.ColumnSpan="5" Stretch="Fill"/>
         <Items:NUCSpeaker Grid.ColumnSpan="10" Grid.RowSpan="3"
HorizontalAlignment="Left" Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>
        <Label x:Name="labelHome"     Grid.ColumnSpan="2" Grid.RowSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding GoToPage}" CommandParameter="MenuMathPrefaceVM" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LToExercise1"  Grid.Column="12"   Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
