<UserControl x:Class="BS.MathLearningView.Recognaz.UCBordMathRecognaz2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Recognaz"
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             FontSize="85" Foreground="White"   mc:Ignorable="d"
       Height="{Binding BoardHeight}" Width="{Binding BoardWidth}"> 
    <!--   d:DesignHeight="450" d:DesignWidth="800" -->
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MathLearningView;component/MathImage/UCBordMathRecognaz2.png"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="204*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="98*"/>
        </Grid.RowDefinitions>
        <Items:UCTransparentCard  Grid.Column="{Binding Column}"  Grid.Row="{Binding Row }"  Width="50" Height="100"
Grid.ColumnSpan="9"  Grid.RowSpan="7" HorizontalAlignment="Left" VerticalAlignment="Top"></Items:UCTransparentCard>
        <Image Grid.Column="5"  Grid.Row="4" Grid.RowSpan="2" Source="{Binding SadSmily}" />
        <Image Grid.Column="12"    Grid.Row="4" Grid.RowSpan="2" Source="{Binding HappySmily}" />
        <Image  Grid.Row="5" Grid.Column="18" Grid.RowSpan="2" Source="{Binding BackgroundAnswerButton}" />

        <TextBlock Grid.Row="3" Grid.RowSpan="4" Grid.Column="8" Grid.ColumnSpan="2" 
            FontSize="85"       TextAlignment="Center" VerticalAlignment="Center" Text="{Binding AnswerText}"/>
        <Label                    Grid.Row="8"    >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="0_8_9" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="1"   Grid.Row="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="1_8_8" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"   Grid.Row="8"                    >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="3_8_7" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="4"   Grid.Row="8" Grid.ColumnSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="4_8_6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="7"   Grid.Row="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="7_8_5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9"   Grid.Row="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="9_8_4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="12"  Grid.Row="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="12_7_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="14"  Grid.Row="8"                    >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="14_8_2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="15"  Grid.Row="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="15_8_1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="17"  Grid.Row="8" Grid.ColumnSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="17_8_0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
    
        <Label  Grid.Row="3" Grid.RowSpan="5"                                     >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="0_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="1" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="1_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="3"                     >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="3_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="4" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="4_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="6" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="6_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="4" Grid.Column="8" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="8_3" />
                </i:EventTrigger>
                <i:EventTrigger EventName="TouchUp">
                    <i:InvokeCommandAction Command="{Binding MouseUp}"  />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="10" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="10_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="12" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="12_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="14" Grid.ColumnSpan="1">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="14_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="15" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="15_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="17" Grid.ColumnSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding AnswerBut}"  />
                </i:EventTrigger>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="17_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <ListBox Background="Transparent" BorderBrush="Transparent"   
                 FlowDirection="RightToLeft"  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Grid.Column="2" Grid.Row="1"  ItemsSource="{Binding ListBall, Mode=OneWay}"  Grid.ColumnSpan="14" >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>         
                    <Image  Height="60" Width="60" Source="/BS.MathLearningView;component/MathImage/kadur.png"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
