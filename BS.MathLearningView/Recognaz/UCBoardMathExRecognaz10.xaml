<UserControl x:Class="BS.MathLearningView.Recognaz.UCBoardMathExRecognaz10"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Recognaz"
             mc:Ignorable="d" 
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             FontSize="85" Foreground="White" 
             d:DesignHeight="450" d:DesignWidth="800"    >
    <!--   Height="{Binding BoardHeight}" Width="{Binding BoardWidth}"  -->
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MathLearningView;component/MathImage/UCBoardMathExRecognaz10.png"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="206*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="98*"/>
        </Grid.RowDefinitions>
        <Items:UCTransparentCard  Grid.Column="{Binding Column}"  Grid.Row="{Binding Row }"  Width="50" Height="100"
Grid.ColumnSpan="9"  Grid.RowSpan="7" HorizontalAlignment="Left" VerticalAlignment="Top"></Items:UCTransparentCard>
        <Image Grid.Column="10"    Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="2" Source="{Binding HappySmily}" />
        <Image Grid.Column="4"  Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="2" Source="{Binding SadSmily}" />
     

        <TextBlock Grid.Row="3" Grid.RowSpan="4" Grid.Column="8"
                   TextAlignment="Center" VerticalAlignment="Center" Text="{Binding TAnswer0}"/>
        <TextBlock Grid.Row="3" Grid.RowSpan="4" Grid.Column="7"
                   TextAlignment="Center" VerticalAlignment="Center" Text="{Binding TAnswer1}"/>
        <Label  Grid.Row="8"    >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="0_8_0" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="1"   Grid.Row="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="1_8_9" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="3"   Grid.Row="8"    Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="3_8_8" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="5"   Grid.Row="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="5_8_7" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="7"   Grid.Row="8">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="7_8_6" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="8"   Grid.Row="8" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="8_8_5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="9"  Grid.Row="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="9_8_4" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="11"  Grid.Row="8" Grid.ColumnSpan="2"    >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="11_8_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="13"  Grid.Row="8" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="13_8_2" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="15"  Grid.Row="8" Grid.ColumnSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding MouseDown}" CommandParameter="15_8_1" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>

        <Label  Grid.Row="3" Grid.RowSpan="5"                                     >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="0_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="1" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="1_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="3"    Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="3_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="5" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="5_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="7" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="7_3" />
                </i:EventTrigger>
                <i:EventTrigger EventName="TouchUp">
                    <i:InvokeCommandAction Command="{Binding MouseUp}" CommandParameter="1"  />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="8"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="8_3" />
                </i:EventTrigger>
                <i:EventTrigger EventName="TouchUp">
                    <i:InvokeCommandAction Command="{Binding MouseUp}" CommandParameter="0"  />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="9" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="9_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="11" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="11_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="13" Grid.ColumnSpan="2">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="14_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="3" Grid.RowSpan="5" Grid.Column="15" Grid.ColumnSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="15_3" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Row="5" Grid.RowSpan="2" Grid.Column="16" >
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundAnswerButton}"/>
            </Label.Background>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding AnswerBut}"  />
                </i:EventTrigger>
                <i:EventTrigger EventName="TouchMove">
                    <i:InvokeCommandAction Command="{Binding MouseMove}" CommandParameter="16_5" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <ListBox Background="Transparent" BorderBrush="Transparent"   
            Grid.Column="2" Grid.Row="1"  ItemsSource="{Binding ListBall, Mode=OneWay}"  Grid.ColumnSpan="12"    
                 FlowDirection="RightToLeft"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image  Height="60" Width="60" Source="{Binding Background}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
