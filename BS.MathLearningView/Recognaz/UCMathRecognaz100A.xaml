        </Label>
        <Label x:Name="LToLerning1" Grid.Column="4" Grid.Row="6" Grid.RowSpan="3" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="MathRecognaz100BVM"/>
