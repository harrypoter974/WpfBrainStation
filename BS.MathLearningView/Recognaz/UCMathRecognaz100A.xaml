                <ImageBrush ImageSource="{Binding LevelBut1}"/>
            </Label.Background>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding OpenPage}"/>
