            <RowDefinition Height="9*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="124*"/>
            <RowDefinition Height="587*"/>
        </Grid.RowDefinitions>
        <Items:UCSpeaker Grid.ColumnSpan="8" Grid.RowSpan="3"
HorizontalAlignment="Left" Margin="{Binding SpeakerMargin}" VerticalAlignment="Top" />
        <Label x:Name="labelHome" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="MenuMathPrefaceVM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel1"   Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="MathExRecognaz10VM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LLevel2"   Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="MathArray2VM"/>
            </Label.InputBindings>
        </Label>
        <Label x:Name="LTo10"     Grid.Column="10" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="3" >
            <Label.InputBindings>
