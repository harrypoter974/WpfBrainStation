        </Label>
        <Label x:Name="LT2oLerning2"  Grid.RowSpan="2" Grid.Column="4" Grid.Row="9" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="MathRecognaz100CVM"/>
            </Label.InputBindings>
        </Label>
        <Image x:Name="imageaGirlMeseg" Grid.Column="17"  Grid.Row="7"
                Source="{Binding messagePic}" Grid.ColumnSpan="2" Grid.RowSpan="6" Stretch="Fill"/>

