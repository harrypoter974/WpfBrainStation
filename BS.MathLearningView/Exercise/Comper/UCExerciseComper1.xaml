<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Comper"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items" x:Class="BS.MathLearningView.Comper.UCExerciseComper1"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000" FontWeight="Bold" FontFamily="Times New Roman" FontSize="75" >
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MathLearningView;component/MathImage/UCExerciseComperFish.jpg"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="227*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="290*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="224*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush />
        </Grid.Background>
        <Grid.InputBindings>
            <MouseBinding MouseAction="LeftClick"  Command="{Binding CloseSpeaker}"/>
        </Grid.InputBindings>
        <Label >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="LernComperVM"/>
            </Label.InputBindings>
        </Label>
        <Image Grid.Column="2"  Grid.Row="9" Visibility="{Binding Fish0}" x:Name="TBLFish0"  
               Grid.ColumnSpan="2" Source="/BS.MathLearningView;component/MathImage/fishGold.png" 
               Stretch="Fill" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="3" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Grid.Column="3"   Grid.Row="5"  x:Name="TBLFish1" Visibility="{Binding Fish1}" 
               Source="/BS.MathLearningView;component/MathImage/fishGold.png" Stretch="Fill" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
        <Image Grid.Column="10"   Grid.Row="10"  x:Name="TBLFish2" Visibility="{Binding Fish2}" 
               Source="/BS.MathLearningView;component/MathImage/fishGold.png" Stretch="Fill" Grid.ColumnSpan="2"
               Grid.RowSpan="1" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Grid.Column="7"   Grid.Row="6" x:Name="TBLFish3" Visibility="{Binding Fish3}"
               Source="/BS.MathLearningView;component/MathImage/fishGold.png" Stretch="Fill" Grid.ColumnSpan="4" Grid.RowSpan="3"/>
        <Image Grid.Column="4"  Grid.Row="11" x:Name="TBLFish4" Visibility="{Binding Fish4}" 
               Source="/BS.MathLearningView;component/MathImage/fishGold.png" Stretch="Fill" 
               Grid.ColumnSpan="5" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Image Grid.Column="17"  Grid.Row="9"  x:Name="TBRFish0" Visibility="{Binding Fish5}"  
               Source="/BS.MathLearningView;component/MathImage/fishGold.png" Stretch="Fill" Grid.ColumnSpan="2"
               RenderTransformOrigin="0.5,0.5" Grid.RowSpan="3" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Grid.Column="18"  Grid.Row="5"  x:Name="TBRFish1" Visibility="{Binding Fish6}"  
               Source="/BS.MathLearningView;component/MathImage/fishGold.png" Stretch="Fill" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
        <Image Grid.Column="24"  Grid.Row="10"  x:Name="TBRFish2" Visibility="{Binding Fish7}"  
               Source="/BS.MathLearningView;component/MathImage/fishGold.png" Stretch="Fill" Grid.ColumnSpan="2"
               RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Grid.Column="22"  Grid.Row="6"  x:Name="TBRFish3" Visibility="{Binding Fish8}" 
               Source="/BS.MathLearningView;component/MathImage/fishGold.png" Stretch="Fill" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
        <Image Grid.Column="20"  Grid.Row="11" x:Name="TBRFish4" Visibility="{Binding Fish9}" 
               Source="/BS.MathLearningView;component/MathImage/fishGold.png" Stretch="Fill" Grid.ColumnSpan="3"
               Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="TBResult" Grid.Column="13" Text="{Binding TextResult}" VerticalAlignment="Center" FontWeight="Bold" 
                   HorizontalAlignment="Center" Grid.Row="5"  Grid.RowSpan="9" Grid.ColumnSpan="2" />
        <Label Grid.Column="30" Grid.Row="15">
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundAnswerButton}"/>
            </Label.Background>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <i:InvokeCommandAction Command="{Binding AnswerBut}"  />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label  Grid.Column="14"  Grid.Row="1" Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="LernComperVM"/>
            </Label.InputBindings>
        </Label>
        <Image Grid.ColumnSpan="2" Grid.Column="27" Grid.Row="3" Source="{Binding messagePic}"/>
        <Items:UCSpeaker Grid.ColumnSpan="4" HorizontalAlignment="Left"
                       Margin="{Binding SpeakerMargin}" VerticalAlignment="Top"/>
   </Grid>
</UserControl>
