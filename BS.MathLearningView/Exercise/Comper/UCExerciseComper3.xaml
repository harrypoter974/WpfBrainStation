             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.MathLearningView.Comper"
             xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"
    x:Class="BS.MathLearningView.Comper.UCExerciseComper3"
             mc:Ignorable="d" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
            d:DesignHeight="900" d:DesignWidth="1000"  FontWeight="Bold" FontFamily="Times New Roman" FontSize="75">
    <UserControl.Background>
        <ImageBrush ImageSource="/BS.MathLearningView;component/MathImage/UCExerciseComperStare.jpg"/>
    </UserControl.Background>
    <Grid>
