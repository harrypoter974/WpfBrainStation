            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="190*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="247*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush />
        </Grid.Background>
        <Grid.InputBindings>
            <MouseBinding MouseAction="LeftClick"  Command="{Binding CloseSpeaker}"/>
        </Grid.InputBindings>
        <Label >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="LernComperVM"/>
            </Label.InputBindings>
        </Label>
        <TextBlock Grid.Column="2"  Grid.Row="5" x:Name="TBLStar0"  Visibility="{Binding StarsL0}"  Background="#FF140A46" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBlock Grid.Column="12" Grid.Row="5" x:Name="TBLStar1"  Visibility="{Binding StarsL1}"  Background="#FF130A43" Grid.ColumnSpan="2" Grid.RowSpan="1"  />
        <TextBlock Grid.Column="5"  Grid.Row="8" x:Name="TBLStar2"  Visibility="{Binding StarsL2}"  Background="#FF140A46" Grid.ColumnSpan="1" Grid.RowSpan="3"  />
        <TextBlock Grid.Column="15" Grid.Row="9" x:Name="TBLStar3"  Visibility="{Binding StarsL3}"  Background="#FF18134D" Grid.RowSpan="2"   />
        <TextBlock Grid.Column="3"  Grid.Row="12" x:Name="TBLStar4" Visibility="{Binding StarsL4}"  Background="#FF1C1E57" Grid.ColumnSpan="2"  Grid.RowSpan="2" />
        <TextBlock Grid.Column="8"  Grid.Row="13" x:Name="TBLStar5" Visibility="{Binding StarsL5}"  Background="#FF201E5F" Grid.ColumnSpan="2"  Grid.RowSpan="2"/>
        <TextBlock Grid.Column="15" Grid.Row="14" x:Name="TBLStar6" Visibility="{Binding StarsL6}"  Background="#FF242365" Grid.ColumnSpan="1" Grid.RowSpan="2"  />
        <TextBlock Grid.Column="2"  Grid.Row="17" x:Name="TBLStar7" Visibility="{Binding StarsL7}"  Background="#FF262C76" Grid.ColumnSpan="2" Grid.RowSpan="4" />
        <TextBlock Grid.Column="11" Grid.Row="18" x:Name="TBLStar8" Visibility="{Binding StarsL8}"  Background="#FF29317B" Grid.RowSpan="4" Grid.ColumnSpan="2" />
        <TextBlock Grid.Column="7"  Grid.Row="19" x:Name="TBLStar9" Visibility="{Binding StarsL9}"  Background="#FF293080" Grid.ColumnSpan="2" Grid.RowSpan="3"/>

        <TextBlock Grid.Column="21" Grid.Row="5"  x:Name="TBRStar0" Visibility="{Binding StarsR0}" Background="#FF130B47" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
        <TextBlock Grid.Column="29" Grid.Row="5"  x:Name="TBRStar1" Visibility="{Binding StarsR1}" Background="#FF140A46" Grid.RowSpan="1"                  />
        <TextBlock Grid.Column="24" Grid.Row="8"  x:Name="TBRStar2" Visibility="{Binding StarsR2}" Background="#FF1A124D" Grid.RowSpan="3"                  />
        <TextBlock Grid.Column="31" Grid.Row="9"  x:Name="TBRStar3" Visibility="{Binding StarsR3}" Background="#FF19134F" Grid.RowSpan="2"                  />
        <TextBlock Grid.Column="22" Grid.Row="12" x:Name="TBRStar4" Visibility="{Binding StarsR4}" Background="#FF1D1B5A" Grid.ColumnSpan="2" Grid.RowSpan="3" />
        <TextBlock Grid.Column="26" Grid.Row="13" x:Name="TBRStar5" Visibility="{Binding StarsR5}" Background="#FF1F1D5E" Grid.RowSpan="2"/>
        <TextBlock Grid.Column="31" Grid.Row="14" x:Name="TBRStar6" Visibility="{Binding StarsR6}" Background="#FF232266" Grid.RowSpan="2" />
        <TextBlock Grid.Column="21" Grid.Row="17" x:Name="TBRStar7" Visibility="{Binding StarsR7}" Background="#FF262C77" Grid.RowSpan="4" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Column="28" Grid.Row="18" x:Name="TBRStar8" Visibility="{Binding StarsR8}" Background="#FF29307E" Grid.ColumnSpan="2" Grid.RowSpan="4"  />
        <TextBlock Grid.Column="25" Grid.Row="19" x:Name="TBRStar9" Visibility="{Binding StarsR9}" Background="#FF2E2D7E" Grid.ColumnSpan="2"  Grid.RowSpan="3" />

        <Label Grid.Column="37" Grid.Row="23">
            <Label.Background>
                <ImageBrush ImageSource="{Binding BackgroundAnswerButton}"/>
            </Label.Background>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <i:InvokeCommandAction Command="{Binding AnswerBut}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Image Grid.ColumnSpan="2" Grid.Column="33" Grid.Row="3" Source="{Binding messagePic}"/>
        <TextBlock  Grid.Column="17" Grid.Row="7" Grid.RowSpan="10" Text="{Binding TextResult}" VerticalAlignment="Center" FontWeight="Bold" 
                   HorizontalAlignment="Center"  Grid.ColumnSpan="2"/>
        <Label   Grid.Column="18"  Grid.Row="1"  Grid.ColumnSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="LernComperVM"/>
            </Label.InputBindings>
        </Label>
        <Items:UCSpeaker Grid.ColumnSpan="7"  HorizontalAlignment="Left" Margin="{Binding SpeakerMargin}"
                          VerticalAlignment="Top"/>
    </Grid>
</UserControl>
