<UserControl xmlns:Items="clr-namespace:BS.Items;assembly=BS.Items"  x:Class="BS.EnglishViews.Notions.UCEnColor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BS.EnglishViews.Notions"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" 
          d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.Background>
        <ImageBrush ImageSource="{Binding BackgroundPic}"/>
        <!--<ImageBrush ImageSource="C:\brinStation\Tests\WpfBrainStation\WpfBrainStation\Resources\Languages\English\Color\Color1.jpg"/>-->
    </UserControl.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush />
        </Grid.Background>
        <Grid.InputBindings>
            <MouseBinding MouseAction="LeftClick"  Command="{Binding CloseSpeaker}"/>
        </Grid.InputBindings>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="135*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="136*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="207*"/>
            <RowDefinition Height="302*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelHome" Grid.ColumnSpan="3" Grid.RowSpan="2" >
            <Label.InputBindings>
                <MouseBinding MouseAction="LeftClick"  Command="{Binding GoToPage}" CommandParameter="MenuEnGeneralVM"/>
            </Label.InputBindings>
        </Label>
   
        <Label x:Name="LColor0" Grid.Column="6"  Grid.Row="10" Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="0"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor1" Grid.Column="8"  Grid.Row="10"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="1"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor2" Grid.Column="9"  Grid.Row="10" Grid.ColumnSpan="2"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="2"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor3" Grid.Column="11"  Grid.Row="10"  Grid.ColumnSpan="2" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="3"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor4" Grid.Column="13" Grid.Row="10"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="4"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LColor5" Grid.Column="14" Grid.Row="10"  Grid.ColumnSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding ShowColor}" CommandParameter="5"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="label0"  Grid.Column="6" Grid.Row="11"  Background="#FF41AD48" Visibility="{Binding Color0}" Grid.ColumnSpan="2"/>
        <Label x:Name="label1"  Grid.Column="8" Grid.Row="11"  Background="#FF41AD48" Visibility="{Binding Color1}"                      />
        <Label x:Name="label2"  Grid.Column="9" Grid.Row="11"  Background="#FF41AD48" Visibility="{Binding Color2}" Grid.ColumnSpan="2"                      />
        <Label x:Name="label3"  Grid.Column="11" Grid.Row="11" Background="#FF41AD48"  Visibility="{Binding Color3}" Grid.ColumnSpan="2"/>
        <Label x:Name="label4"  Grid.Column="13" Grid.Row="11" Background="#FF41AD48" Visibility="{Binding Color4}"                      />
        <Label x:Name="label5"  Grid.Column="14" Grid.Row="11" Background="#FF41AD48" Visibility="{Binding Color5}" Grid.ColumnSpan="4"/>
        <Label x:Name="LToGrope1" ContentStringFormat="1" Grid.Column="10" Grid.Row="3" Grid.RowSpan="3">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchColor}" CommandParameter="1"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Label x:Name="LToGrope0" ContentStringFormat="0" Grid.Column="11" Grid.Row="3"  Grid.RowSpan="3" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding SwitchColor}" CommandParameter="0"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Label>
        <Image x:Name="imageMessegGerl" Grid.Column="12" Grid.Row="3" Grid.ColumnSpan="6" 
               Source="{Binding messagePic}" Grid.RowSpan="3" Stretch="Fill" />
        <Label Grid.Column="16"  Grid.Row="12"  Grid.ColumnSpan="4" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TouchDown">
                    <i:InvokeCommandAction Command="{Binding PlayAll}" CommandParameter="3"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Label.Background>
                <ImageBrush ImageSource="{Binding PlayAllBut}"/>
            </Label.Background>
        </Label>

        <Items:UCSpeaker  Grid.ColumnSpan="9" Grid.RowSpan="3" HorizontalAlignment="Left"
Margin="{Binding SpeakerMargin}"  VerticalAlignment="Top" />
    </Grid>
</UserControl>
